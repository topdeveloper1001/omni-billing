@using BillingSystem.Model.CustomModel
@model List<GlobalCodeCustomDModel>

@if (Model != null && Model.Count > 0)
{
    var grid = new WebGrid(Model, ajaxUpdateContainerId: "gridContent", canPage: false);
    <div id="gridContent">
        @grid.GetHtml(htmlAttributes: new { id = "GlobalCodeGrid" }, tableStyle: "table table-grid", headerStyle: "gridHead", footerStyle: "gridFooter",
                                        rowStyle: "gridRow", alternatingRowStyle: "gridAltRow", columns: grid.Columns(
                                         grid.Column("RoomSTR", header: "Room", canSort: true),
                                         grid.Column("GlobalCodeName", header: "Equipment Name", canSort: true),
                                        grid.Column(header: "Action", style: "col5", format: @<text>
        <a href="javascript:void(0);" title="Edit" onclick="EditRoomEquipment('@item.RoomId','@item.FacilityNumber','@item.CorporateId')" style="float: left; margin-right: 7px; width: 15px;">
            <img src="~/images/edit.png" />
        </a>
        <a href="javascript:void(0);" title="Delete Global Code" onclick="DeleteRoomEquipment('@item.GlobalCodeID','@item.FacilityNumber');" style="float: left; width: 15px;">
            <img src="~/images/delete.png" />
        </a>
        </text>)
))<h6>* Click on any column heading to sort</h6>
    </div>
}
else
{
    <h2>No Record found</h2>
}


