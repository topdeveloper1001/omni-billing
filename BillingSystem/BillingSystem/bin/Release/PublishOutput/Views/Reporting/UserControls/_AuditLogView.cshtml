@using BillingSystem.Model.CustomModel
@using System.Linq

@model IEnumerable<AuditLogCustomModel>

@if (Model != null && Model.Count() > 0)
{
    var grid = new WebGrid(Model, ajaxUpdateContainerId: "gridContentLoginTrackingReport", canPage: false, canSort: true);
    <div id="gridContentLoginTrackingReport">
        @grid.GetHtml(htmlAttributes: new { id = "LoginTrackingReportGrid" }, tableStyle: "table table_scroll12", headerStyle: "gridHead", footerStyle: "gridFooter",
                                        rowStyle: "gridRow", alternatingRowStyle: "gridAltRow", columns: grid.Columns(
                                        grid.Column("TableName", header: "Table", canSort: true, style: "col1"),
                                        grid.Column("FieldName", header: "Field", canSort: true, style: "col2"),
                                        grid.Column("UserName", header: "Concerned", canSort: true, style: "col3"),
                                        grid.Column("AssignedRoles", header: "Assigned Roles", canSort: true, style: "col4"),
                                        grid.Column("AssignedFacilities", header: "Assigned Facilities", canSort: true, style: "col5"),
                                        grid.Column("CreatedDate", header: "Logged On", canSort: true, style: "col6", format: @<text>@if (item.CreatedDate!= null)
                                            { @item.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss" ) 
                                            }</text> )
))
        <h6>* Click on any column heading to sort</h6>
    </div>
}
else
{
    <h2>No Record found</h2>
}
<script>
    $(function () {
        $('.table_scroll12').fixedHeaderTable({ cloneHeadToFoot: true, altClass: 'odd', autoShow: true });
        SetGridSorting(SortPasswordDisableLogGrid, "#gridContentLoginTrackingReport");
    });
</script>