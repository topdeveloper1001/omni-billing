@model BillingSystem.Models.GlobalCodeCategoryMasterView
<style>
    .btn-group {
        padding: 10px;
    }
</style>
<div id="collapseOne" class="panel-collapse collapse">
    <div class="panel-body">
        <div class="base-color">
            <div class="form patientTable" id="validate">
                <div class="col-xs-12 col-sm-4 col-lg-3">
                    <input type="hidden" value="@Model.CurrentGlobalCodeGlobalCodeCategory.GlobalCodeCategoryID" id="hfGlobalCodeCategoryID" />
                    @* <div class="rowTable">
                        <input type="hidden" value="@Model.CurrentGlobalCodeGlobalCodeCategory.GlobalCodeCategoryID" id="hfGlobalCodeCategoryID" />
                      <label class="control-label">Facilty Name :</label>
                         @Html.DropDownListFor(m => m.CurrentGlobalCodeGlobalCodeCategory.FacilityNumber, new SelectList(Model.LstFacility, "FacilityNumber", "FacilityName"), "--Select One--", new { id = "ddlFacility", @class = "validate[required]" })
                 
                       
                    </div>*@
                    <div class="rowTable">
                        <label class="control-label"><span class="mandatoryStar"></span>Order Category Value :</label>
                        @Html.TextBoxFor(m => m.CurrentGlobalCodeGlobalCodeCategory.GlobalCodeCategoryValue, new { @ID = "GlobalCodeCategoryValue", @maxlength = "20", @class = "validate[required,custom[onlyNumberSp]]" })
                    </div>
                </div>
                <div class="col-xs-12 col-sm-4 col-lg-3">
                    <div class="rowTable">
                        <label class="control-label"><span class="mandatoryStar"></span>Order Category Name :</label>
                        @Html.TextBoxFor(m => m.CurrentGlobalCodeGlobalCodeCategory.GlobalCodeCategoryName, new { @ID = "GlobalCodeCategoryName", @maxlength = "50", @class = "validate[required]" })
                    </div>
                </div>

                <div class="col-xs-12 col-sm-4 col-lg-3">
                    <div class="rowTable">
                        <label class="control-label">Revenue General Ledger Number:</label>
                        @Html.TextBoxFor(m => m.CurrentGlobalCodeGlobalCodeCategory.ExternalValue1, new { @ID = "txtRevenueGeneralLedgerNumber", @maxlength = "30" })
                    </div>
                </div>
                <div class="col-xs-12 col-sm-4 col-lg-3">
                    <div class="rowTable">
                        <label class="control-label">A/R Master Account:</label>
                        @Html.TextBoxFor(m => m.CurrentGlobalCodeGlobalCodeCategory.ExternalValue2, new { @ID = "txtARMasterAccount", @maxlength = "30" })
                    </div>
                </div>
                <div class="col-xs-12 col-sm-4 col-lg-3">
                    <div class="rowTable">
                        <label>Is Active :</label>
                        @Html.CheckBoxFor(m => m.CurrentGlobalCodeGlobalCodeCategory.IsActive, new { @id = "chkActive" })
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="button-block">
                        @*"return checkDuplicateUser(@Model.UserID);" document.location.href = $('#Url').attr('href');*@
                        @if (Model.CurrentGlobalCodeGlobalCodeCategory.GlobalCodeCategoryID != 0)
                        {  
                            <input type="submit" class="blue-btn btn btn-primary edit-btn marginrightBtn" onclick="return CheckDuplicateGlobalCodeCategory();" value="Update" />               
                        }
                        else
                        {
                            <input type="submit" class="blue-btn btn btn-primary edit-btn marginrightBtn" value="Save" onclick="return CheckDuplicateGlobalCodeCategory();" />                

                        }
                        <button name="ClientCancel" class="blue-btn btn btn-primary edit-btn marginrightBtn" type="button" onclick="ClearFields();">Cancel</button>


                    </div>
                </div>
            </div>

        </div>


    </div>
</div>


