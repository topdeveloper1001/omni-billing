@using BillingSystem.Model.CustomModel
@using Kendo.Mvc.UI

@model PaymentCustomModel

<div class="form">
    @Html.HiddenFor(m => m.PaymentID, new { @id = "hdPaymentID" })
    @Html.HiddenFor(m => m.PayCreatedBy, new { @id = "hdCreatedBy" })
    @Html.HiddenFor(m => m.PayCreatedDate, new { @id = "hdCreatedDate" })
    <div>
        <div class="bg-info rowTable">
            <div class="col-md-12">
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="rowTable">
                        <label>Payment Reference:</label>
                        @Html.TextBoxFor(m => m.PayReference, new { @maxlength = "50", @ID = "txtPaymentReference" })
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="rowTable">
                        <label>Pay Date:</label>
                        @Html.TextBoxFor(m => m.PayDate, "{0:MM/dd/yyyy}", new { @maxlength = "10", @ID = "txtPayDate", @class = "dtGeneralWithTime validate[required]" })
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="rowTable">
                        <label>Payment Type:</label>
                        <select id="ddlPaymentType"></select>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="rowTable">
                        <label>Pay Amount:</label>
                        @Html.TextBoxFor(m => m.PayAmount, new { @maxlength = "20", @ID = "txtPayAmount", @class = "validate[custom[integer]]" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clear"></div>

    <div id="patmentTypeDiv">
        <h2 class="form_heading">Payment Type Detail</h2>
        <div id="DivPaymentTypeList" class="rowTable">
            @{Html.RenderPartial("~/Views/Payment/UserControls/_PaymentTypeDetailAddEdit.cshtml", @Model.CurrentPaymentTypeDetail);}
        </div>
    </div>
    <div class="form-group">
        @{
            var btnSaveText = "Apply Payment";
        }
        <input type="submit" class="blue-btn btn btn-primary edit-btn" id="BtnSave" value="@btnSaveText" />
        <button name="ClientCancel" class="blue-btn btn btn-primary edit-btn" id="btnPaymentCancel" type="button">Cancel</button>
    </div>
</div>
