@model IEnumerable<BillingSystem.Model.CustomModel.ReviewExpectedPaymentReport>

@if (Model != null && Model.Any())
{
    var grid = new WebGrid(Model, ajaxUpdateContainerId: "ExpectedPaymentInsNotPaidGridContent", canPage: false);
    <div id="ExpectedPaymentInsNotPaidGridContent">
        @grid.GetHtml(htmlAttributes: new {id = "ExpectedPaymentInsNotPaidGrid"}, tableStyle: "table", headerStyle: "gridHead", footerStyle: "gridFooter",
            rowStyle: "gridRow", alternatingRowStyle: "gridAltRow", columns: grid.Columns(
                grid.Column("Insurer", "Insurer", canSort: true, style: "col1"),
                grid.Column("Plan", "Plan", canSort: true, style: "col2"),
                grid.Column("EncounterID", "Encounter ID", canSort: true, style: "col3"),
                grid.Column("PatientName", "Patient Name", canSort: true, style: "col4"),
                grid.Column("InsuranceBillDate", "Insurance Bill Date", canSort: true, style: "col5", format: @<text>@if (item.InsuranceBillDate != null)
                                                                                                                     {
                                                                                                                         @item.InsuranceBillDate.ToString("dd/MM/yyyy")
                                                                                                                     }</text>),
                grid.Column("ExpectedPayment", "Expected Insurance Payment", canSort: true, style: "col6"),
                grid.Column("ExpectedPaymentDate", "Expected Payment Date", canSort: true, style: "col7", format: @<text>@if (item.ExpectedPaymentDate != null)
                                                                                                                         {
                                                                                                                             @item.ExpectedPaymentDate.ToString("dd/MM/yyyy")
                                                                                                                         }</text>),
                grid.Column("Status", "Bill Status", canSort: true, style: "col8")
                ))
    </div>
}
else
{
    <h2>No Record found</h2>
}
<script>
    $(function() {
        SetGridSorting(SortExpactedPayment, "#ExpectedPaymentInsNotPaidGridContent");
    });
</script>