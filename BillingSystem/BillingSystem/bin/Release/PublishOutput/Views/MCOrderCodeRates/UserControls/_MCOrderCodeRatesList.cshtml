@using BillingSystem.Model.CustomModel
@model List<MCOrderCodeRatesCustomModel>

<div class="form">
    <div class="table-responsive">
        @if (Model != null && Model.Count > 0)
        {
            var grid = new WebGrid(Model, ajaxUpdateContainerId: "gridOrderCodeRateContent", canPage: false);
            <div id="gridOrderCodeRateContent">
                @grid.GetHtml(htmlAttributes: new {id = "McContractOrderCodeRateGrid"}, tableStyle: "table table-grid", headerStyle: "gridHead", footerStyle: "gridFooter",
                    rowStyle: "gridRow", alternatingRowStyle: "gridRow", columns:
                        grid.Columns(
                            grid.Column(header: "Action", format: @<text>
                                                                       <a href="#" onclick="EditMCOrderCodeRates('@item.MCOrderCodeRatesId') " style="float: left; margin-right: 7px; width: 15px;">
                                                                           <img src="@Url.Content("~/images/edit.png")" /></a>
                                                                       @*<a href="#" title="Delete" onclick="return DeleteMCOrderCodeRates('@item.MCOrderCodeRatesId'); " style="float: left; width: 15px;">
                                                                           <img src="@Url.Content("~/images/delete.png")" /></a>*@
                
                <a href="javascript:void(0);" title="Delete" onclick="return OpenConfirmPopup('@item.MCOrderCodeRatesId','Delete MCOrder Code Rates','',DeleteMCOrderCodeRates,null); " style="float: left; width: 15px;">
                    <img src="@Url.Content("~/images/delete.png")" />
                </a>
                

                                                                   </text>),
                            grid.Column("MCCode", header: "Manage Care Code", canSort: true),
                            grid.Column("OrderTypeStr", header: "Order Type", canSort: false, style: "col1"),
                            grid.Column("OrderCode", header: "Order Code", canSort: false),
                            grid.Column("OrderCodeDescription", header: "Order Code Description", canSort: false),
                            grid.Column("OrderCodePerDiemRate", header: "Order Code PerDiem Rate", canSort: false),
                            grid.Column("OrderCodeAddOns", header: "Order Code Add Ons", canSort: false)
                            ))
            </div>
        }
        else
        {
            <h2>No Record found</h2>
        }
    </div>
</div>
<script type="text/javascript">
    $(function() {
        $("#McContractOrderCodeRateGrid tbody tr").each(function (i, row) {
            var $actualRow = $(row);
            if ($actualRow.find('.col1').html().indexOf("CPT") != -1) {
                $actualRow.addClass('rowColor1');
            } else if ($actualRow.find('.col1').html().indexOf("DRUG") != -1) {
                $actualRow.addClass('rowColor2');
            } else if ($actualRow.find('.col1').html().indexOf("Service Code") != -1) {
                $actualRow.addClass('rowColor4');
            } else {
                $actualRow.removeClass('rowColor2');
                $actualRow.removeClass('rowColor1');
                $actualRow.removeClass('rowColor4');
            }
        });
    });
</script>