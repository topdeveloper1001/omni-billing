@using BillingSystem.Common
@model BillingSystem.Models.DashboardIndicatorsView
@{
    ViewBag.Title = "DashboardIndicators View";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentticks = DateTime.Now.Ticks;
}

<div class="white-bg">
    <div class="panel panel-default collapsecss ourcollapse">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseDashboardIndicatorsAddEdit">
            <h4 class="panel-title collapseTitle">
                <span class="glyphicon glyphicon-plus-sign"></span> Add Dashboard Indicators
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseDashboardIndicatorsAddEdit" class="panel-collapse collapse">
            <div class="panel-body scroller">
                <div class="base-color">
                    <div class="form">                        
                        @{ Html.RenderPartial("~/Views/DashboardIndicators/UserControls/_DashboardIndicatorsAddEdit.cshtml", Model.CurrentDashboardIndicators); }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default collapsecss ourcollapse bordertable">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseDashboardIndicatorsList">
            <h4 class="panel-title collapseTitle">
                <span><img src="../images/list.png" /></span> Dashboard Indicators List
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseDashboardIndicatorsList" class="panel-collapse collapse in tableImg">
            <div class="marginTB10">
                <div class="col-sm-5 pull-right">
                    <div class="col-sm-3 pull-right">
                        <span>Export :</span>
                        @Html.ActionLink(" ", "ExportToExcel",
                             new
                             {
                                 
                             },
                             new
                             {
                                 @class = "excelexportIcon1",
                                 @title = "Export as Excel",
                                 @id = "btnExportExcelData"
                             })
                    </div>

                </div>
            </div>
            <div class="panel-body">
                <div class="base-color" id="DashboardIndicatorsListDiv">
                    @{ Html.RenderPartial("~/Views/DashboardIndicators/UserControls/_DashboardIndicatorsList.cshtml", Model.DashboardIndicatorsList); }
                </div>
            </div>
             <span class="inactive">
                View In active records <input id="chkShowInActive" type="checkbox"/>
            </span>
        </div>
    </div>
    <div class="clear"></div>
</div>
<script src="~/Scripts/DashboardIndicators/DashboardIndicatorsScript.js?@Helpers.CurrentAssemblyTicks"></script>
<script src="~/Scripts/Common/confirmEvents.js?@Helpers.CurrentAssemblyTicks"></script>