@model List<BillingSystem.Model.CustomModel.MedicalNotesCustomModel>


<div class="table-responsive scrollable-panel">
    @if (Model != null && Model.Count > 0)
    {
        var grid = new WebGrid(Model, ajaxUpdateContainerId: "gridContentNotes", canPage: false);
        <div id="gridContentNotesPatientSummary">
            @grid.GetHtml("table table-striped table-hover", "gridHead", "gridFooter", "gridRow", "gridAltRow", columns: grid.Columns(
                    grid.Column("MedicalNotes.Notes", "Notes"),//style: "thNotes"
                                grid.Column("NotesTypeName", "Type"),
                                grid.Column("NotesAddedBy", "Added By"),
                                grid.Column("MedicalNotes.NotesDate", "Added on", format: @<text>@if (item.MedicalNotes.NotesDate!= null)
                                           { @item.MedicalNotes.NotesDate.ToString("dd/MM/yyyy HH:mm:ss" ) 
                                           }</text> )

                        ))<h6>* Click on any column heading to sort</h6>
        </div>
    }
    else
    {

        <h2>No Record found</h2>
    }
</div>
<script>
    $(function() {
        SetGridSorting(SortCurrentNotesbyPhysician, "#gridContentNotesPatientSummary");
    });
</script>