@model BillingSystem.Model.EncounterOrder


@{
    ViewBag.Title = "Add Physician Order";
}
<style>
    .btn-group {
        margin-left: 15px;
    }
</style>

    <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
    <h4 class="panel-title collapseTitle">
        <span class="glyphicon glyphicon-plus-sign"></span>&nbsp;Add Orders
        <a class="btn btn-default btn-sm pull-right collapse-btn">
            <span class="glyphicon glyphicon-chevron-down"></span>
        </a>
    </h4>
</div>
<div id="collapseTwo" class="panel-collapse collapse in">
    <div class="panel-body" id="divPhysicianOrder">
        <div class="base-color">
            <div class="form">
                <div class="col-sm-4">
                    <div class="rowTable">
                        <label>Order Type</label>
                        <select id="ddlCodeType" name="ddlCodeType" class="validate[required]" onchange="BindCodes();"></select>
                        @Html.HiddenFor(m => m.CodeTypeId, new { @id = "hdCodeTypeId" })
                    </div>
                    <div class="rowTable">
                        <label>Order Code</label>
                        @Html.TextBoxFor(m => m.CodeId, new { id = "txtCode", @maxlength = "20", @class = "validate[required]" })
                    </div>
                    <div class="rowTable">
                        <label>Units</label>
                        @Html.TextBoxFor(m => m.Units, new { id = "txtUnitValue", @maxlength = "2" })
                        <select id="ddlUnitType" name="ddlUnitType" class="validate[required]"></select>
                        @Html.HiddenFor(m => m.UnitTypeId, new { @id = "hdUnitTypeId" })
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="rowTable">
                        <label>Start Date</label>
                        @Html.TextBoxFor(m => m.StartDate, new { id = "txtStartDate", @maxlength = "15", @placeholder = "dd/mm/yyyy", @class = "datetimeF validate[required]"})
                    </div>
                    <div class="rowTable">
                        <label>End Date</label>
                        @Html.TextBoxFor(m => m.EndDate, new { id = "txtEndDate", @maxlength = "15", @placeholder = "dd/mm/yyyy", @class = "datetimeF validate[required]" })
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="rowTable">
                        <label>Frequency</label>
                        <select id="ddlFrequencyList" name="ddlFrequencyList" class="validate[required]"></select>
                        @Html.HiddenFor(m => m.FrequencyId, new { @id = "hdFrequencyId" })
                    </div>
                    <div class="rowTable">
                        <label>Comments</label>
                        @Html.TextAreaFor(m => m.Comments, new { id = "txtComments", @maxlength = "500", @placeholder = "Enter your additional comments here" })
                    </div>
                </div>
                <div class="clear"></div>
                <div class="btn-group">
                    <input type="submit" onclick="return IsValidOrder('@Model.Id');" value="Submit" class="blue-btn btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</div>

