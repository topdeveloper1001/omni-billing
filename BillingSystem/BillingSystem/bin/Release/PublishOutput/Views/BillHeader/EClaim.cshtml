@using BillingSystem.Common
@using BillingSystem.Models
@model BillDetailsView

@{
    ViewBag.Title = "EClaim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .btn-group {
        margin: 5px 0 5px 0;
    }

    .scrollable-panel {
        overflow: visible;
    }

    .colBillHeaderAction {
        width: 12%;
    }
</style>

<div class="white-bg">
    <div class="panel panel-default collapsecss ourcollapse">
            <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#CollapseBillPayerClaimsList">
                <h4 class="panel-title collapseTitle" id="BillPayerClaimsListHeading">Payer Claims
                                        <a class="btn btn-default btn-sm pull-right collapse-btn">
                                            <span class="glyphicon glyphicon-chevron-down"></span>
                                        </a>
                </h4>
            </div>
            <div id="CollapseBillPayerClaimsList" class="panel-collapse collapse in">
                <div class="table-responsive scroller" id="BillPayerClaimListDiv">
                    @{Html.RenderPartial("~/Views/BillHeader/UserControls/_PayerWiseClaims.cshtml", Model.PayerWiseBillHeaderList);}
                </div>
            </div>
        </div>
    <div class="panel-group">
        <div class="panel panel-default collapsecss ourcollapse">
            <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#CollapseBillHeaderList">
                <h4 class="panel-title collapseTitle" id="BillHeaderListHeading">Bills Overview (Final Status)
                    <a class="btn btn-default btn-sm pull-right collapse-btn">
                        <span class="glyphicon glyphicon-chevron-down"></span>
                    </a>
                </h4>
            </div>

            <div id="CollapseBillHeaderList" class="panel-collapse collapse in">
                <div id="FinalBillsListDiv" class="scroller">
                    <div class="table-responsive" id="divFinalBillHEaderListView">
                        @{Html.RenderPartial("~/Views/BillHeader/UserControls/_FinalBillHeadersListView.cshtml", Model.BillHeaderList);}
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default collapsecss ourcollapse">
            <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#CollapseBillActivitiesList">
                <h4 class="panel-title collapseTitle" id="BillActivityListHeading">Bill Activities <span id="billnumberSpn"></span>
                                        <a class="btn btn-default btn-sm pull-right collapse-btn">
                                            <span class="glyphicon glyphicon-chevron-down"></span>
                                        </a>
                </h4>
            </div>
            <div id="CollapseBillActivitiesList" class="panel-collapse collapse">
                <div class="table-responsive scroller" id="BillActivityListDiv">
                    @{Html.RenderPartial("~/Views/BillHeader/UserControls/_BillActivityList.cshtml", Model.BillActivityList);}
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/BillHeader/FinalBillsView.js?@Helpers.CurrentAssemblyTicks"></script>
<script src="~/Scripts/BillHeader/EclaimFile.js?@Helpers.CurrentAssemblyTicks"></script>