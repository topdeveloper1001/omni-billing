@model BillingSystem.Model.CustomModel.DocumentsTemplatesCustomModel

@{
    ViewBag.Title = "Patient Documents";
}

@using (Html.BeginForm("UploadOnlineHelpFiles", "FileUploader", FormMethod.Post, new { @encType = "multipart/form-data" }))
{
<div class="col-sm-6">
    @Html.HiddenFor(m => m.AssociatedType, new { @id = "hfAssociatedType" })
    <div class="rowTable">
        <label class="control-label">Description</label>
        @Html.TextAreaFor(m => m.DocumentNotes, new { @id = "txtDocumentNotes", @maxlength = "500" })
    </div>
    <div class="rowTable">
        <label class="control-label">Versioning</label>
        @Html.TextBoxFor(m => m.ExternalValue1)
    </div>
    <div class="rowTable">
        <label class="control-label">Sort Order</label>
        @Html.TextBoxFor(m => m.ExternalValue2, new { @class = "validate[optional[integer]]" })
    </div>
    <div class="validateUploadExcel importBillUpload">
        @Html.TextBoxFor(m => m.File, new { @type = "file", @id = "File", @class = "validate[required]" })
        <input type="submit" class="btn btn-primary edit-btn marginrightBtn" value="Upload Files" />
        @if (!string.IsNullOrEmpty(ViewBag.check))
        {
            <span id="spImportExcelfile" style="color: red;">@ViewBag.check</span>
        }
    </div>
</div>

