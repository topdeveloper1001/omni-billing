@using BillingSystem.Model.CustomModel
@model List<XPaymentReturnCustomModel>

<div class="form">
    <div class="table-responsive">
        @if (Model != null && Model.Count > 0)
        {
            var grid = new WebGrid(Model, ajaxUpdateContainerId: "gridContent", canPage: false);
            <div id="gridContent">
                @grid.GetHtml(tableStyle: "table table-grid", headerStyle: "gridHead", footerStyle: "gridFooter", rowStyle: "gridRow", alternatingRowStyle: "gridAltRow", columns: grid.Columns(
                    grid.Column("AActivityID", header: "ActivityID", canSort: true),
                    grid.Column("AStart", header: "Start Date", canSort: true, format: @<text>@if (item.AStart != null)
                                                                                          {
                                                                                              @item.AStart.ToString("dd/MM/yyyy")
                                                                                          }</text>),
                    grid.Column("ActivityTypeName", header: "Type", canSort: true),
                    grid.Column("ACode", header: "Code", canSort: true),
                    grid.Column("AQuantity", header: "Quantity", canSort: true),
                    grid.Column("AANet", header: "Net", canSort: true),
                    grid.Column("AAGross", header: "Gross", canSort: true),
                    grid.Column("AAPatientShare", header: "Patient Share", canSort: true),
                    grid.Column("AAPaymentAmount", header: "Payment Amount", canSort: true),
                    //grid.Column("AADenialCode", header: "Applied", canSort: true),
                    //grid.Column("XModifiedBy", header: "UnApplied", canSort: true),
                    grid.Column("AADenialCode", header: "Denial Code", canSort: true),
                    grid.Column("XModifiedBy", header: "Modified By", canSort: true),
                    grid.Column("XModifiedDate", header: "Modified Date", canSort: true, format: @<text>@if (item.XModifiedDate != null)
                                                                                                        {
                                                                                                            @item.XModifiedDate.ToString("dd/MM/yyyy")
                                                                                                        }</text>),
                    grid.Column(header: "Action", format: @<text>
                                                               <a href="javascript:void(0);" onclick="EditXPaymentReturn('@item.XPaymentReturnId') " style="float: left; margin-right: 7px; width: 15px;">
                                                                   <img src="~/images/edit.png" /></a>
                                                           </text>)
                    ))
            </div>
        }
        else
        {

            <h2>No Record found</h2>
        }
    </div>
</div>
