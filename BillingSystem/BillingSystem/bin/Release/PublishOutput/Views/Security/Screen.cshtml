@model BillingSystem.Models.ScreenView
@{
    ViewBag.Title = "Screen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/Security/Screen.js"></script>
<div class="white-bg">
    <div class="panel panel-default collapsecss ourcollapse">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
            <h4 class="panel-title collapseTitle">
                <span class="glyphicon glyphicon-plus-sign"></span>&nbsp;Add Screen
            <a class="btn btn-default btn-sm pull-right collapse-btn">
                <span class="glyphicon glyphicon-chevron-down"></span>
            </a>
            </h4>
        </div>
        <div id="ScreenInfo">
            @{Html.RenderPartial("~/Views/Security/UserControls/_AddUpdateScreen.cshtml", Model);}
        </div>

    </div>

    <div id="ScreenList">
        @{Html.RenderPartial("~/Views/Security/UserControls/_ScreenList.cshtml", Model.ScreensList);}
    </div>

    <div class="clear"></div>

</div>





