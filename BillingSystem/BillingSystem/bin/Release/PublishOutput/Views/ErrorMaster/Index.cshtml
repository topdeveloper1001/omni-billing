@using BillingSystem.Common
@model BillingSystem.Models.ErrorMasterView

@{
    ViewBag.Title = "Error Master View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="white-bg">
    <div class="panel panel-default collapsecss ourcollapse">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseErrorMasterAddEdit">
            <h4 class="panel-title collapseTitle">
                <span class="glyphicon glyphicon-plus-sign"></span>Add Errors 
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseErrorMasterAddEdit" class="panel-collapse collapse">
            <div class="panel-body">
                <div class="base-color">
                    <div class="form">

                        @{Html.RenderPartial("~/Views/ErrorMaster/UserControls/_ErrorMasterAddEdit.cshtml", Model.CurrentErrorMaster);}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default collapsecss ourcollapse bordertable">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseErrorMasterList">
            <h4 class="panel-title collapseTitle">
                <span>
                    <img src="@Url.Content("~/images/list.png")" /></span> Error Master List
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseErrorMasterList" class="panel-collapse collapse in tableImg">
            <div class="panel-body scroller">
                <div class="base-color" id="ErrorMasterListDiv">
                    @{Html.RenderPartial("~/Views/ErrorMaster/UserControls/_ErrorMasterList.cshtml", Model.ErrorMasterList);}
                </div>
            </div>
        </div>
        <span class="inactive">
                View In active records <input id="chkShowInActive" type="checkbox" onchange="BindErrorCodes();"/>
         </span>
    </div>
    <div class="clear"></div>
</div>

<script src="~/Scripts/ErrorMaster/ErrorMasterScript.js?@Helpers.CurrentAssemblyTicks"></script>
<script src="~/Scripts/Common/confirmEvents.js?@Helpers.CurrentAssemblyTicks"></script>
