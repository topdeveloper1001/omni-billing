@model BillingSystem.Models.PatientVolumeDashboardView
@{
    ViewBag.Title = "Charges Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string style = "display:block;";
}

<div class="white-bg">
    <div class="panel panel-default collapsecss ourcollapse bordertable">
        <div class="panel-heading" data-parent="#accordion" data-toggle="collapse">
            <h4 class="panel-title collapseTitle">
                <span>
                    <img src="@Url.Content("~/images/list.png")">
                </span>&nbsp; Selection
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseReporting" class="panel-collapse tableImg collapse in">
            <div class="panel-body">
                <div class="base-color">
                    <div class="form" style="min-height: 90px;">
                        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                            <div class="rowTable">
                                <label>Select Facility:</label>
                                <select id="ddlFacility"></select>
                                @Html.HiddenFor(m => m.CurrentFacilityId, new {@id = "hdCurrentFacilityId"})
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                            <div class="rowTable">
                                <label>Select Year:</label>
                                <select id="ddlYear"></select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default collapsecss ourcollapse bordertable" style="@style">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseSTATISTICS">
            <h4 class="panel-title collapseTitle">
                <span>
                    <img src="@Url.Content("~/images/list.png")">
                </span>
                Patient Volumes - STATISTICS
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseSTATISTICS" class="panel-collapse collapse in">
            <div class="panel-body">
                <div class="base-color" id="PatinetVolumeStats">
                    @{ Html.RenderPartial("~/Views/Dashboard/UserControls/_PatientVolumeStats.cshtml", Model); }
                </div>
            </div>
        </div>
        <span class="inactive">
            @Html.ActionLink(" ", "ExportToExcel",
                new
                {
                    dashBoardType ="Volume",  
                },
                new
                {
                    @class = "excelexportIcon",
                    @title = "Export as Excel",
                    @id = "btnExportExcel"
                })
        </span>
    </div>

    <div id="divRegProductivityDashboardView">
        <div class="panel panel-default collapsecss ourcollapse bordertable" style="@style">
            <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseRegistrationProductivityCharts1">
                <h4 class="panel-title collapseTitle">
                    <span>
                        <img src="@Url.Content("~/images/list.png")">
                    </span>
                    Patient Volumes - Graph Section
                    <a class="btn btn-default btn-sm pull-right collapse-btn">
                        <span class="glyphicon glyphicon-chevron-down"></span>
                    </a>
                </h4>
            </div>
            <div id="collapseRegistrationProductivityCharts1" class="panel-collapse collapse in">
                <div class="panel-body">
                    <div class="base-color">
                        <div class="form">
                            <div class="col-sm-12 white-bg">
                                <div class="col-sm-6" id="myDashboardAdjustedPatientDaysMonthly" style="float: left;">
                                </div>
                                <div class="col-sm-6" id="myDashboardAdjustedPatientDaysYearly" style="float: left;">
                                </div>
                            </div>
                            <div class="clear"></div>
                            <div class="col-sm-12 white-bg">
                                <div class="col-sm-6" id="myDashboardIPEncountersMonthly" style="float: left;">
                                </div>
                                <div class="col-sm-6" id="myDashboardIPEncountersYearly" style="float: left;">
                                </div>
                            </div>
                            <div class="clear"></div>
                            <div class="col-sm-12 white-bg">
                                <div class="col-sm-6" id="myDashboardOPEncountersMonthly" style="float: left;">
                                </div>
                                <div class="col-sm-6" id="myDashboardOPEncountersYearly" style="float: left;">
                                </div>
                            </div>
                            <div class="clear"></div>
                            <div class="col-sm-12 white-bg">
                                <div class="col-sm-6" id="myDashboardEREncountersMonthly" style="float: left;">
                                </div>
                                <div class="col-sm-6" id="myDashboardEREncountersYearly" style="float: left;">
                                </div>
                            </div>
                            <div class="clear"></div>
                            <div class="col-sm-12 white-bg">
                                <div class="col-sm-6" id="myDashboardAdmissionMonthly" style="float: left;">
                                </div>
                                <div class="col-sm-6" id="myDashboardAdmissionYearly" style="float: left;">
                                </div>
                            </div>
                            <div class="clear"></div>
                            <div class="col-sm-12 white-bg">
                                <div class="col-sm-6" id="myDashboardDischargesMonthly" style="float: left;">
                                </div>
                                <div class="col-sm-6" id="myDashboardDischargesYearly" style="float: left;">
                                </div>
                            </div>
                            <div class="clear"></div>
                            <div class="col-sm-12 white-bg">
                                <div class="col-sm-6" id="myDashboardALOSYearly" style="float: left;">
                                </div>
                                <div class="col-sm-6" id="myDashboardADCYearly" style="float: left;">
                                </div>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
</div>

<script src="~/Scripts/Dashboard/PatientVolumeDashboardScript.js"></script>