@using BillingSystem.Model.CustomModel
@model List<XFileHeaderCustomModel>

<div class="form">
    <div class="table-responsive">
        @if (Model != null && Model.Count > 0)
        {
            var grid = new WebGrid(Model, ajaxUpdateContainerId: "gridContent", canPage: false);
            <div id="gridContent">
                @grid.GetHtml(tableStyle: "table table-grid", headerStyle: "gridHead", footerStyle: "gridFooter", rowStyle: "gridRow", alternatingRowStyle: "gridAltRow", columns: grid.Columns(
                    grid.Column("FileID", header: "FileID", canSort: true),
                    grid.Column("FileType", header: "FileType", canSort: true),
                    grid.Column("SenderID", header: "SenderID", canSort: true),
                    grid.Column("ReceiverID", header: "ReceiverID", canSort: true),
                    grid.Column("TransactionDate", header: "TransactionDate", canSort: true),
                    grid.Column("RecordCount", header: "RecordCount", canSort: true),
                    grid.Column("XPath", header: "XPath", canSort: true),
                    grid.Column("Status", header: "Status", canSort: true),
                    grid.Column("SentDate", header: "SentDate", canSort: true),
                    grid.Column(header: "Action", format: @<text>
                                                               <a href="#" onclick=" EditXFileHeader('@item.FileID') " style="float: left; margin-right: 7px; width: 15px;">
                                                                   <img src="~/images/edit.png" /></a>
                                                           </text>)
                    ))
            </div>
        }
        else
        {

            <h2>No Record found</h2>
        }
    </div>
</div>
