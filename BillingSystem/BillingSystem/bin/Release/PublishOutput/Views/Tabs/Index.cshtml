@using BillingSystem.Common
@model BillingSystem.Models.TabsView


@{
    ViewBag.Title = "Tabs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="white-bg">
    <div class="panel panel-default collapsecss ourcollapse">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseMenuTabOne">
            <h4 class="panel-title collapseTitle">
                <span class="glyphicon glyphicon-plus-sign"></span>&nbsp;Add Tabs
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseMenuTabOne" class="panel-collapse collapse">
            <div class="panel-body">
                <div class="base-color">
                    <div class="form">
                        @{Html.RenderPartial("~/Views/Tabs/UserControls/_TabsAddEdit.cshtml", Model.CurrentTabs);}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default collapsecss ourcollapse bordertable">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseMenuTabList">
            <h4 class="panel-title collapseTitle">
                <span>
                    <img src="../images/list.png" /></span>&nbsp;Tabs List
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseMenuTabList" class="panel-collapse collapse in tableImg">
            <div class="panel-body">
                <div class="base-color" id="TabsListDiv">
                    <div class="table-responsive" id="divAllTabs">
                        @{Html.RenderPartial("~/Views/Tabs/UserControls/_TabsList.cshtml", Model.TabsList);}
                    </div>
                </div>
            </div>
        </div>
        <span class="inactive">
            View In active records
            <input id="chkShowInActive" type="checkbox" onchange="ShowInActiveRecordsOfMenuTab('#chkShowInActive');" />
        </span>
    </div>
    <div class="clear"></div>
</div>

<script src="~/Scripts/Tabs/TabsScript.js?@Helpers.CurrentAssemblyTicks"></script>
<script src="~/Scripts/Common/confirmEvents.js?@Helpers.CurrentAssemblyTicks"></script>