@using BillingSystem.Model.CustomModel
@model List<MCRulesTableCustomModel>

<div class="form">
    <div class="table-responsive">
        @if (Model != null && Model.Count > 0)
        {
            var grid = new WebGrid(Model, ajaxUpdateContainerId: "gridContent");
            <div id="gridContent">
                @grid.GetHtml(htmlAttributes: new {id = "McContractRuleStepGrid"}, tableStyle: "table table-grid", headerStyle: "gridHead", footerStyle: "gridFooter",
                    rowStyle: "gridRow", alternatingRowStyle: "gridAltRow", columns: grid.Columns(
                        grid.Column("PatientTypeStr", header: "Patient Type", canSort: true,style:"col2"),
                        grid.Column("ConStartStr", header: "Condtition Start", canSort: true,style:"col3"),
                        grid.Column("CompareTableString", header: "Selection Table & Column", canSort: true,style:"col4"),
                        grid.Column("CalculationTypeStr", header: "Calculation", canSort: true,style:"col4"),
                        grid.Column("ComparorTableString", header: "Second Value", canSort: true,style:"col4"),
                        grid.Column("ConNextLineStr", header: "Next Line Condtition", canSort: true,style:"col3"),
                        grid.Column("IsActive", header: "Is Active", canSort: true,style:"col12"),
                        grid.Column(header: "Action", format: @<text>
                                                                   <a href="javascript:void(0);" onclick="EditMCRulesTable('@item.ManagedCareRuleId') " style="float: left; margin-right: 7px; width: 15px;">
                                                                       <img src="@Url.Content("~/images/edit.png")" /></a>
                                                                   @*<a href="javascript:void(0);" title="Delete" onclick="return DeleteMCRulesTable('@item.ManagedCareRuleId'); " style="float: left; width: 15px;">
                                                                       <img src="@Url.Content("~/images/delete.png")" /></a>*@
                <a href="javascript:void(0);" title="Delete" onclick="return OpenConfirmPopup('@item.ManagedCareRuleId','Delete MCRules Table','',DeleteMCRulesTable,null); " style="float: left; width: 15px;">
                    <img src="@Url.Content("~/images/delete.png")" />
                </a>
                                                               </text>)
                        ))
            </div>
        }
        else
        {

            <h2>No Record found</h2>
        }
    </div>
</div>
