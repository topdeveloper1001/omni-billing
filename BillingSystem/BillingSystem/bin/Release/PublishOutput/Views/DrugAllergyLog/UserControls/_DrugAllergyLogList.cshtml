@using BillingSystem.Model.CustomModel
@model List<DrugAllergyLogCustomModel>

<div class="form">
    <div class="table-responsive">
        @if (Model != null && Model.Count > 0)
        {
            WebGrid grid = new WebGrid(Model, ajaxUpdateContainerId: "gridContent");
            <div id="gridContent">
                @grid.GetHtml(tableStyle: "table table-grid", headerStyle: "gridHead", footerStyle: "gridFooter", rowStyle: "gridRow", alternatingRowStyle: "gridAltRow", columns: grid.Columns(
                                grid.Column("Id", header: "Id" , canSort: true),
                                grid.Column("OrderCode", header: "OrderCode" , canSort: true),
                                grid.Column("OrderCategory", header: "OrderCategory" , canSort: true),
                                grid.Column("OrderSubCategory", header: "OrderSubCategory" , canSort: true),
                                grid.Column("OrderType", header: "OrderType" , canSort: true),
                                grid.Column("OrderName", header: "OrderName" , canSort: true),
                                grid.Column("AllergyType", header: "AllergyType" , canSort: true),
                                grid.Column("ReactionType", header: "ReactionType" , canSort: true),
                                grid.Column("PatientId", header: "PatientId" , canSort: true),
                                grid.Column("EncounterId", header: "EncounterId" , canSort: true),
                                grid.Column("ReactionOrderCode", header: "ReactionOrderCode" , canSort: true),
                                grid.Column("AllergyFromName", header: "AllergyFromName" , canSort: true),
                                grid.Column("IsOrderCancel", header: "IsOrderCancel" , canSort: true),
                                grid.Column("OrderBy", header: "OrderBy" , canSort: true),
                                grid.Column("OrderedDate", header: "OrderedDate" , canSort: true),
                                grid.Column("CreatedBy", header: "CreatedBy" , canSort: true),
                                grid.Column("CreatedDate", header: "CreatedDate" , canSort: true),

                grid.Column(header: "Action", format: @<text>
                <a href="#" onclick="EditDrugAllergyLog('@item.Id')" style="float: left; margin-right: 7px; width: 15px;">
                    <img src="@Url.Content("~/images/edit.png")" /></a>
                                                           @*<a href="#" title="Delete" onclick="return DeleteDrugAllergyLog('@item.DrugAllergyLogId');" style="float: left; width: 15px;">
                    <img src="@Url.Content("~/images/delete.png")" /></a>*@
                
                <a href="javascript:void(0);" title="Delete" onclick="return OpenConfirmPopup('@item.Id','Delete Drug Allergy Log','',DeleteDrugAllergyLog,null); " style="float: left; width: 15px;">
                    <img src="@Url.Content("~/images/delete.png")" />
                </a>
                                                       </text>)
                                ));
            </div>            
        }
        else
        {

            <h2>No Record found</h2>
        }
    </div>
</div>
