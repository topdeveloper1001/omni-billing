@using BillingSystem.Model.CustomModel
@*@model List<GlobalCodeCustomModel>*@
@model List<GlobalCodeCustomModel>


@if (Model != null)
{
    if (Model.Any())
    {
        var grid = new WebGrid(Model, ajaxUpdateContainerId: "gridContent", canPage: true, rowsPerPage: 50);
                                  <div id="gridContent">
                                      @grid.GetHtml(htmlAttributes: new { id = "AllergyMasterGrid" }, tableStyle: "table table-grid", headerStyle: "gridHead", footerStyle: "gridFooter",
                                        rowStyle: "gridRow", alternatingRowStyle: "gridAltRow", columns: grid.Columns(
                                        grid.Column("GlobalCodes.GlobalCodeName", header: "Name", canSort: true, style: "col1"),
                                        grid.Column("GlobalCodes.Description", header: "Description", canSort: true, style: "col2"),
                                        grid.Column("GlobalCodeCustomValue", header: "Category", canSort: true, style: "col3"),
                                        grid.Column("GlobalCodes.CreatedDate", header: "Created On", canSort: true, style: "col4"),
                                        grid.Column("GlobalCodes.IsActive", header: "Active", canSort: true, style: "col5"),
                                        grid.Column(header: "Action", style: "col8", format: @<text>
                              <a href="javascript:void(0);" title="Edit Facility" onclick="EditCurrentAllergy('@item.GlobalCodes.GlobalCodeID')" style="float: left; margin-right: 7px; width: 15px;">
                                  <img src="../images/edit.png" />
                              </a>
                                                                                                  &nbsp;
                                         @*<a href="javascript:void(0);" title="Delete Facility" onclick="return DeleteAllergyRecord('@item.GlobalCodes.GlobalCodeID');" style="float: left; width: 15px;">
                                  <img src="../images/delete.png" />
                              </a>*@
                                      
                                      <a href="javascript:void(0);" title="Delete" onclick="return OpenConfirmPopup('@item.GlobalCodes.GlobalCodeID','Delete Allergy Record','',DeleteAllergyRecord,null); " style="float: left; width: 15px;">
                                          <img src="@Url.Content("~/images/delete.png")" />
                                      </a>
                                                                                              </text>)
))<h6>* Click on any column heading to sort</h6>
                                  </div>
    }
    else
    {
                                  <h2>No Record found</h2>
    }
}
