@model BillingSystem.Models.BedMasterView
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/Scripts/Facility/Facility.js"></script>
<script src="~/Scripts/Common/Common.js"></script>

<div id="divFacility" class="white-bg">
    <div class="panel panel-default collapsecss ourcollapse">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
            <h4 class="panel-title collapseTitle">
                <span class="glyphicon glyphicon-plus-sign"></span>&nbsp;Add Bed
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseOne" class="panel-collapse collapse">
            <div class="panel-body">
                <div class="base-color">
                    <div class="form">
                        @*
                            Owner: Shashank Awasthy
                            On: 10092014
                            Purpose: Render the grid view in partial view to display the filtered data.
                        *@
                        @{Html.RenderPartial("~/Views/BedMaster/UserControls/_bedMasterAddEdit.cshtml", Model.CurrentBedMaster);}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default collapsecss ourcollapse bordertable">
        <div class="panel-heading" data-parent="#accordion" data-toggle="collapse" href="#collapseTwo">
            <h4 class="panel-title collapseTitle">
                <span>
                    <img src="@Url.Content("~/images/list.png")">
                </span>Bed Master List
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseTwo" class="panel-collapse collapse in">
            <div class="panel-body">
                <div class="base-color  scroller" id="facilityGrid">
                    <div class="table-responsive">
                        @{Html.RenderPartial("~/Views/BedMaster/UserControls/_bedMasterList.cshtml", Model.BedMasterList);}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="clear"></div>