@using BillingSystem.Common
@using BillingSystem.Models

@model CarePlanView

@{
    ViewBag.Title = "CarePlan View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="white-bg">
    <div class="panel panel-default ourcollapse custom_panel">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseCarePlanAddEdit">
            <h4 class="panel-title collapseTitle">
                <span class="glyphicon glyphicon-plus-sign"></span>Add Care Plan
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseCarePlanAddEdit" class="panel-collapse collapse">
            <div class="panel-body">
                @{Html.RenderPartial("~/Views/CarePlan/UserControls/_CarePlanAddEdit.cshtml", Model.CurrentCarePlan);}

            </div>
        </div>
    </div>
    <div class="panel panel-default collapsecss ourcollapse bordertable">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseCarePlanList">
            <h4 class="panel-title collapseTitle">
                <span>
                    <img src="~/images/list.png" /></span> Care Plan List
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseCarePlanList" class="panel-collapse collapse in tableImg">
            <div class="panel-body">
                <div class="base-color" id="CarePlanListDiv">
                    @{Html.RenderPartial("~/Views/CarePlan/UserControls/_CarePlanList.cshtml", Model.CarePlanList);}
                </div>
                <span class="inactive">View In active records
                    <input id="chkShowInActive" type="checkbox" />
                </span>
            </div>
        </div>
    </div>
    <div class="clear"></div>
</div>

<script src="~/Scripts/CarePlan/CarePlanScript.js?@Helpers.CurrentAssemblyTicks"></script>
<script src="~/Scripts/Common/confirmEvents.js?@Helpers.CurrentAssemblyTicks"></script>