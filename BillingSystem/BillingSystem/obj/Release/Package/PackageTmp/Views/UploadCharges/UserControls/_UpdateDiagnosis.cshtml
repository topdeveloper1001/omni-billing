@using BillingSystem.Models

@model DiagnosisView
@*Diagnosis Add/update Section starts*@
    <div class="panel panel-default collapsecss ourcollapse diagnosisview" style="display:none;">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseDiagnosisAddEdit">
            <h4 class="panel-title collapseTitle">
                <span class="glyphicon glyphicon-plus-sign"></span>&nbsp;Diagnosis 
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseDiagnosisAddEdit" class="panel-collapse collapse in">
            <div class="panel-body scroller">
                <div class="base-color">
                    <div class="form">
                        @{ Html.RenderPartial("~/Views/Diagnosis/UserControls/_DiagnosisAddEdit.cshtml", Model.CurrentDiagnosis); }
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*Diagnosis Add/update Section Ends*@
    @*Diagnosis list Section starts*@
    <div class="panel panel-default collapsecss ourcollapse bordertable diagnosisview" style="display:none;">
        <div class="panel-heading" data-parent="#accordion" data-toggle="collapse" href="#collapseDiagnosisList">
            <h4 class="panel-title collapseTitle">
                <span>
                    <img src="@Url.Content("~/images/list.png")">
                </span>Current Diagnosis
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseDiagnosisList" class="panel-collapse tableImg collapse in">
            <div class="panel-body">
                <div class="base-color" >
                    <div class="table-responsive" id="CurrentDiagnosisGrid">
                        @{Html.RenderPartial("~/Views/Diagnosis/UserControls/_DiagnosisList.cshtml", Model.DiagnosisList);}
                    </div>
                </div>
            </div>
        </div>
    </div>
@*Diagnosis list Section starts*@

