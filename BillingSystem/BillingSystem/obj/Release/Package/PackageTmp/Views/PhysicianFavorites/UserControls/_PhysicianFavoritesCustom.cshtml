@using BillingSystem.Models

@model PhysicianFavoritesView

<div class="panel panel-default collapsecss ourcollapse bordertable">
    <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseSearchPanel">
        <h4 class="panel-title collapseTitle">
            <span class="glyphicon glyphicon-info-sign"></span>&nbsp;Search
            <a class="btn btn-default btn-sm pull-right collapse-btn">
                <span class="glyphicon glyphicon-chevron-down"></span>
            </a>
        </h4>
    </div>
    <div id="collapseSearchPanel" class="panel-collapse collapse in">
        <div class="panel-body">
            <div class="base-color" id="physicianGrid">
                <div class="search-panel overflowHidden">
                    <form class="form-horizontal" role="form">
                        <div class="col-sm-12 col-lg-6 row">
                            <label>Select Code Type:</label>
                            <select id="ddltype" onchange="BindPhysicianSearchGrid();"></select>
                            <input type="hidden" id="hdOrderType" value="0" />
                        </div>
                        <div class="col-sm-12 col-lg-3">
                            <div class="rowTable">
                                <input type="text" class="form-control" id="txtSearchData" placeholder="Enter Code / Description...">
                            </div>
                        </div>
                        <div class="col-sm-12 col-lg-3">
                            <div class="rowTable">
                                 <button type="button" onclick="SearchCodeList();" class="btn btn-primary">Search</button>
                            </div>
                        </div>
                        <div class="clear"></div>
                    </form>
                </div>
            </div>
            <div class="table-responsive" >
                <div class="panel-body" id="SearchedOrdersList">
                    @{Html.RenderPartial("~/Views/PhysicianFavorites/UserControls/_phySearch.cshtml", Model.SearchedOrders);}
                </div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
</div>
