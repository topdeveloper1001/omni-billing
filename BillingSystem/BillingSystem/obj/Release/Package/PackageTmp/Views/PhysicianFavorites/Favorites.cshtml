@using BillingSystem.Common
@using BillingSystem.Models

@model PhysicianFavoritesView
@{
    ViewBag.Title = "Favorites";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .gridRow span {
        background-color: #FF9;
    }
</style>
@*<script src="~/Scripts/Summary/PatientSummary.js"></script>*@
<div id="divPhysician" class="white-bg">
    <div class="panel panel-default collapsecss ourcollapse bordertable">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseSelectPhysician">
            <h4 class="panel-title collapseTitle">
                <span class="glyphicon glyphicon-info-sign"></span>&nbsp;Physician
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseSelectPhysician" class="panel-collapse collapse in">
            <div class="panel-body">
                <div class="base-color" id="physicianGrid">
                    <div class="search-panel overflowHidden">
                        <form class="form-horizontal" role="form">
                            <div class="col-sm-12 col-lg-6 row">
                                <label>Select Physician:</label>
                                <select id="ddlPhysicians" onchange="ShowPhysicianData();"></select>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="form" id="favOrdersGrid">
                    @*
                        Owner: Shashank Awasthy
                        On: 10092014
                        Purpose: Render the grid view in partial view to display the filtered data.
                    *@
                    @{Html.RenderPartial("~/Views/PhysicianFavorites/UserControls/_phyFavoriteOrders.cshtml", Model.PhyFavoriteOrders);}
                </div>
            </div>
        </div>
    </div>
    <div id="divPhysicianFavoritesAll">
        @*
        Owner: Shashank Awasthy
        On: 10092014
        Purpose: Render the grid view in partial view to display the filtered data.
        *@
        @{Html.RenderPartial("~/Views/PhysicianFavorites/UserControls/_PhysicianFavoritesCustom.cshtml", Model);}
    </div>
</div>

<script src="~/Scripts/PhysicianFavorites/PhysicianFavorites.js?@Helpers.CurrentAssemblyTicks"></script>
<script src="~/Scripts/Common/confirmEvents.js?@Helpers.CurrentAssemblyTicks"></script>