@model BillingSystem.Model.InsuranceCompany

@{
    ViewBag.Title = "InsuranceCompany";
}
<style>
    select {
    margin-bottom: 10px;}
</style>
<div class="form" id="InsuranceCompanyFormDiv">
    <div class="col-sm-3">
        <div class="rowTable">
            <label>Company Name:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyName, new { @maxlength = "50", @id = "txtInsuranceCompanyName", @class = "validate[required]" })
        </div>
        <div class="rowTable">
            <label>Company Street Address:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyStreetAddress, new { @maxlength = "50", @id = "txtInsuranceCompanyStreetAddress", @class = "validate[required]" })
        </div>
        <div class="rowTable">
            <label>Street Address 2:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyStreetAddress2, new { @maxlength = "50", @id = "txtInsuranceCompanyStreetAddress2" })
        </div>
        <div class="rowTable">
            <label>Company City:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyCity, new { @maxlength = "40", @id = "txtInsuranceCompanyCity" })
        </div>
        <div class="rowTable">
            <label>Claims Contact:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyClaimsContact, new { @maxlength = "40", @id = "txtInsuranceCompanyClaimsContact" })
        </div>
        <div class="rowTable">
            <label>Company Denials Contact:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyDenialsContact, new { @maxlength = "40", @id = "txtInsuranceCompanyDenialsContact" })
        </div>
        <div class="rowTable">
            <label>License Number:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyLicenseNumber, new { @maxlength = "15", @id = "txtInsuranceCompanyLicenseNumber" })
        </div>
    </div>

    <div class="col-sm-3">
        <div class="rowTable">
            <label>Company Type License:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyTypeLicense, new { @maxlength = "20", @id = "txtInsuranceCompanyTypeLicense" })
        </div>
        <div class="rowTable">
            <label>Authorization Contact:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyAuthorizationContact, new { @maxlength = "40" })
        </div>
        <div class="rowTable">
            <label>Related:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyRelated, new { @maxlength = "40", @id = "txtInsuranceCompanyRelated" })
        </div>
        <div class="rowTable">
            <label>License Number Expire Date:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyLicenseNumberExpire, "{0:MM/dd/yyyy}", new { @maxlength = "10", @id = "dtInsuranceCompanyLicenseNumberExpire" })
        </div>
        <div class="rowTable">
            <label>Main Contact:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyMainContact, new { @maxlength = "40", @id = "txtInsuranceCompanyMainContact" })
        </div>
        
        <div class="rowTable">
            <label>Zip Code:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyZipCode, new { @maxlength = "9", @id = "txtInsuranceCompanyZipCode" })
        </div>
        <div class="rowTable">
            <label>Contact Email Address:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyEmailAddress, new { @maxlength = "40", @id = "txtInsuranceCompanyEmailAddress" })
        </div>
    </div>

    <div class="col-sm-3">

        <div class="rowTable">
            <label>PO Box:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyPOBox, new { @maxlength = "50", @id = "txtInsuranceCompanyPOBox" })
        </div>
        <div class="rowTable">
            <label>Country:</label>
            @*@Html.DropDownListFor(m => m.InsuranceCompanyCountry, new SelectList(Model.CountryList, "CodeValue", "CountryWithCode"), "-Select-", new { @id = "InsuranceCompanyCountry" })*@
            <select id="ddlInsuranceCompanyCountry" class="validate[required]"></select>
            @Html.HiddenFor(m => m.InsuranceCompanyCountry, new { @id = "hdCountry" })
        </div>
        <div class="rowTable">
            <label>Claims Contact Phone:</label>
           @* @Html.DropDownListFor(m => m.InsuranceCompanyCountry, new SelectList(Model.CountryList, "CodeValue", "CountryWithCode"), "-Select-", new { id = "ddlClaimsContactPhoneCode" })*@
            <select id="ddlClaimsContactPhoneCode" class="validate[required]"></select>
            @Html.HiddenFor(m => m.InsuranceCompanyClaimsContactPhone, new { @id = "hdlClaimsContactPhoneCode" })
            @Html.TextBoxFor(m => m.InsuranceCompanyClaimsContactPhone, new { @maxlength = "11", @class = "validate[optional[onlyNumberSp]]", @id = "txtInsuranceCompanyClaimsContactPhone" })
        </div>
        <div class="rowTable">
            <label>Denials Phone:</label>
           @* @Html.DropDownListFor(m => m.InsuranceCompanyCountry, new SelectList(Model.CountryList, "CodeValue", "CountryWithCode"), "-Select-", new { id = "ddlDenialsPhoneCode" })*@
            <select id="ddlDenialsPhoneCode" class="validate[required]"></select>
            @Html.HiddenFor(m => m.InsuranceCompanyDenialsPhone, new { @id = "hdDenialsPhoneCode" })
            @Html.TextBoxFor(m => m.InsuranceCompanyDenialsPhone, new { @maxlength = "11", @class = "validate[optional[onlyNumberSp]]", @id = "txtInsuranceCompanyDenialsPhone" })
        </div>
        <div class="rowTable">
            <label>Company Fax:</label>
            @*@Html.DropDownListFor(m => m.InsuranceCompanyCountry, new SelectList(Model.CountryList, "CodeValue", "CountryWithCode"), "-Select-", new { id = "ddlCompanyFaxCode" })*@
            <select id="ddlCompanyFaxCode" class="validate[required]"></select>
            @Html.HiddenFor(m => m.InsuranceCompanyFax, new { @id = "hdCompanyFaxCode" })
            @Html.TextBoxFor(m => m.InsuranceCompanyFax, new { @maxlength = "13", @class = "validate[optional[onlyNumberSp]]", @id = "txtInsuranceCompanyFax" })
        </div>
    </div>

    <div class="col-sm-3">
        
        <div class="rowTable">
            <label>Second Phone:</label>
            @*@Html.DropDownListFor(m => m.InsuranceCompanyCountry, new SelectList(Model.CountryList, "CodeValue", "CountryWithCode"), "-Select-", new { id = "ddlSecondPhoneCode" })*@
            <select id="ddlSecondPhoneCode" class="validate[required]"></select>
            @Html.HiddenFor(m => m.InsuranceCompanySecondPhone, new { @id = "hdSecondPhoneCode" })
            @Html.TextBoxFor(m => m.InsuranceCompanySecondPhone, new { @maxlength = "11", @class = "validate[optional[onlyNumberSp]]", @id = "txtInsuranceCompanySecondPhone" })
        </div>
        
        <div class="rowTable">
            <label>Main Contact Phone:</label>
            @*@Html.DropDownListFor(m => m.InsuranceCompanyCountry, new SelectList(Model.CountryList, "CodeValue", "CountryWithCode"), "-Select-", new { id = "ddlMainContactPhoneCode" })*@
            <select id="ddlMainContactPhoneCode" class="validate[required]"></select>
            @Html.HiddenFor(m => m.InsuranceCompanyMainContactPhone, new { @id = "hdMainContactPhoneCode" })
            @Html.TextBoxFor(m => m.InsuranceCompanyMainContactPhone, new { @maxlength = "11", @class = "validate[optional[onlyNumberSp]]", @id = "txtInsuranceCompanyMainContactPhone" })
        </div>
        <div class="rowTable">
            <label>Authorization Phone:</label>
            @*@Html.DropDownListFor(m => m.InsuranceCompanyCountry, new SelectList(Model.CountryList, "CodeValue", "CountryWithCode"), "-Select-", new { id = "ddlAuthorizationPhoneCode" })*@
            <select id="ddlAuthorizationPhoneCode" class="validate[required]"></select>
            @Html.HiddenFor(m => m.InsuranceCompanyAuthorizationPhone, new { @id = "hdlAuthorizationPhoneCode" })
            @Html.TextBoxFor(m => m.InsuranceCompanyAuthorizationPhone, new { @maxlength = "11", @class = "validate[optional[onlyNumberSp]]", @id = "txtInsuranceCompanyAuthorizationPhone" })
        </div>
        <div class="rowTable">
            <label>Main Phone:</label>
            @*@Html.DropDownListFor(m => m.InsuranceCompanyCountry, new SelectList(Model.CountryList, "CodeValue", "CountryWithCode"), "-Select-", new { id = "ddlMainPhoneCode" })*@
            <select id="ddlMainPhoneCode" class="validate[required]"></select>
            @Html.HiddenFor(m => m.InsuranceCompanyMainPhone, new { @id = "hdMainPhoneCode" })
            @Html.TextBoxFor(m => m.InsuranceCompanyMainPhone, new { @maxlength = "11", @class = "validate[optional[onlyNumberSp]]", @id = "txtInsuranceCompanyMainPhone" })
        </div>
    </div>

    <div class="clear"></div>

    <div class="btn-group">
        <div style="float: left;">
            @if (Model.InsuranceCompanyId != null && Model.InsuranceCompanyId != 0)
            {  <input type="submit" class="btn btn-primary edit-btn marginBtn" value="Update" onclick="return SaveInsuranceCompany('@Model.InsuranceCompanyId    ');" />
                <button name="ClientCancel" class="btn btn-primary edit-btn marginBtn" type="button" onclick="return ClearAll();">Cancel</button>
            }
            else
            {
                <input type="submit" onclick="return SaveInsuranceCompany('@Model.InsuranceCompanyId');" class="btn btn-primary edit-btn marginBtn" value="Save" />
                <button name="ClientCancel" class="btn btn-primary edit-btn marginBtn" type="button" onclick="return ClearAll();">Cancel</button>
            }
            <a id="indexUrl" href="@Html.AttributeEncode(Url.Action("Index", "Insurance"))" style="display:none;"></a>
            <a id="Url" href="@Html.AttributeEncode(Url.Action("Insurance", "Insurance"))" style="display:none;"></a>
            <br />
            <span id="lblMessage" style="display: none; font-weight: bold; margin-top: 5px;">Fields marked with <span style="color: red;">* </span>are mendatory.</span>
            @*@if (TempData["Message"] != null)
        {
            <div style="margin: 5px 5px 5px 12px; color: green; font-size: 12px;">@TempData["Message"]</div>

        }*@
        </div>
    </div>



</div>
