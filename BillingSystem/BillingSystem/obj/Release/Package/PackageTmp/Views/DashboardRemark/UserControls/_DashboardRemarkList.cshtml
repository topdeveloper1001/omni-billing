@using BillingSystem.Model.CustomModel
@model List<DashboardRemarkCustomModel>

<div class="form">
    <div class="table-responsive">
        @if (Model != null && Model.Count > 0)
        {
            var grid = new WebGrid(Model, ajaxUpdateContainerId: "gridContent", canPage: false);
            <div id="gridContent">
                @grid.GetHtml("table table-grid", "gridHead", "gridFooter", "gridRow", "gridAltRow", columns: grid.Columns(
                    grid.Column("DashboardTypeStr", "Dashboard"),
                    grid.Column("DashboardSectionStr", "Section"),
                    grid.Column("DashboardMonth", "Month"),
                    grid.Column("Remarks", "Remarks", style: "width300"),
                    grid.Column("FacilityStr", "Facility"),
                    grid.Column(header: "Action", format: @<text>
                                                               <a href="#" onclick="EditDashboardRemark('@item.Id') " style="float: left; margin-right: 7px; width: 15px;">
                                                                   <img src="@Url.Content("~/images/edit.png")" /></a>
                                                               @*<a href="#" title="Delete" onclick="return DeleteDashboardRemark('@item.Id'); " style="float: left; width: 15px;">
                                                                   <img src="@Url.Content("~/images/delete.png")" /></a>*@
                <a href="javascript:void(0);" title="Delete" onclick="return OpenConfirmPopup('@item.Id','Delete DashboardRemark','',DeleteDashboardRemark,null); " style="float: left; width: 15px;">
                    <img src="@Url.Content("~/images/delete.png")" />
                </a>
                
                

                                                           </text>)
                    ))
            </div>
        }
        else
        {
            <h2>No Record found</h2>
        }
    </div>
</div>
