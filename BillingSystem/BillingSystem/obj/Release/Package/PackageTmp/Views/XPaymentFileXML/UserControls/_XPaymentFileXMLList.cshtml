@using BillingSystem.Model.CustomModel
@model List<XPaymentFileXMLCustomModel>

<div class="form">
    <div class="table-responsive">
        @if (Model != null && Model.Count > 0)
        {
            var grid = new WebGrid(Model, ajaxUpdateContainerId: "gridContent",canPage:false);
            <div id="gridContent">
                @grid.GetHtml(tableStyle: "table table-grid", headerStyle: "gridHead", footerStyle: "gridFooter", rowStyle: "gridRow", alternatingRowStyle: "gridAltRow", columns: grid.Columns(
                    grid.Column("XPaymentFileXMLID", header: "Payment File ID", canSort: true),
                    grid.Column("XClaimID", header: "Claim ID", canSort: true),
                    grid.Column("XPaymentFileXML1", header: "Payment File XML", canSort: true),
                    grid.Column("XModifiedDate", header: "Modified Date", canSort: true),
                    grid.Column("XModifiedBy", header: "ModifiedBy", canSort: true),
                    grid.Column("XStatus", header: "Status", canSort: true)
                    ))
            </div>
        }
        else
        {
            <h2>No Record found</h2>
        }
    </div>
</div>
