@using BillingSystem.Model.CustomModel
@model IEnumerable<TPFileHeaderCustomModel>

@if (Model != null && Model.Count() > 0)
{
    var grid = new WebGrid(Model, ajaxUpdateContainerId: "gridContent", canPage: false);
    <div id="gridContent">
        @grid.GetHtml(htmlAttributes: new { id = "TpFileHeaderDataGrid" }, tableStyle: "table table-grid", headerStyle: "gridHead", footerStyle: "gridFooter",
                            rowStyle: "gridRow", alternatingRowStyle: "gridAltRow", columns: grid.Columns(
                            grid.Column("TPFileHeaderID", header: "ID", canSort: false, style: "col1"),
                                 grid.Column("FileType", header: "File Type", canSort: false, style: "col2"),
                                 grid.Column("SenderID", header: "Sender ID", canSort: false, style: "col3"),
                                 grid.Column("ReceiverID", header: "Receiver ID", canSort: false, style: "col4"),
                                 grid.Column("RecordCount", header: "Record Count", canSort: false, style: "col5"),
                                 grid.Column("DispositionFlag", header: "Disposition Flag", canSort: false, style: "col6"),
                                 grid.Column("SentDate", header: "Sent On", canSort: false, style: "col7"),
                                grid.Column(header: "Action", style: "col8", format: @<text>
        <a href="javascript:void(0);" onclick="FetchXMlParsedData('@item.TPFileHeaderID')" title="View XML Parsed Data" style="float: left; margin-right: 7px; width: 15px;">
            <img src="~/images/view_small.png" />
        </a></text>)
        ))
    </div>
}
else
{
    <h2>No Record found</h2>
}
