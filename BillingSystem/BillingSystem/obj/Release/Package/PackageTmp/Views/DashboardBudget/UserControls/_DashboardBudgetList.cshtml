@using BillingSystem.Model.CustomModel
@model List<DashboardBudgetCustomModel>

<div class="form">
    <div class="table-responsive">
        @if (Model != null && Model.Count > 0)
        {
            WebGrid grid = new WebGrid(Model, ajaxUpdateContainerId: "gridContent",canPage:false);
            <div id="gridContent">
                @grid.GetHtml(tableStyle: "table table_scroll", headerStyle: "gridHead ", footerStyle: "gridFooter", rowStyle: "gridRow", alternatingRowStyle: "gridAltRow", columns: grid.Columns(
                                grid.Column("BudgetTypeString", header: "Budget Type" , canSort: true),
                                grid.Column("BudgetForStr", header: "Budget For" , canSort: true),
                                grid.Column("BudgetDescription", header: "Budget Description" , canSort: true),
                                grid.Column("DepartmentNumber", header: "Department Number" , canSort: true),
                                grid.Column("FiscalYear", header: "Fiscal Year" , canSort: true),
                                grid.Column("JanuaryBudget", header: "January Budget" , canSort: true),
                                grid.Column("FebruaryBudget", header: "February Budget" , canSort: true),
                                grid.Column("MarchBudget", header: "March Budget" , canSort: true),
                                grid.Column("AprilBudget", header: "April Budget" , canSort: true),
                                grid.Column("MayBudget", header: "May Budget" , canSort: true),
                                grid.Column("JuneBudget", header: "June Budget" , canSort: true),
                                grid.Column("JulyBudget", header: "July Budget" , canSort: true),
                                grid.Column("AugustBudget", header: "August Budget" , canSort: true),
                                grid.Column("SeptemberBudget", header: "September Budget" , canSort: true),
                                grid.Column("OctoberBudget", header: "October Budget" , canSort: true),
                                grid.Column("NovemberBudget", header: "November Budget" , canSort: true),
                                grid.Column("DecemberBudget", header: "December Budget" , canSort: true),
                                grid.Column("IsActive", header: "IsActive" , canSort: true),
                grid.Column(header: "Action", format: @<text>
                <a href="#" onclick="EditDashboardBudget('@item.BudgetId')" style="float: left; margin-right: 7px; width: 15px;">
                    <img src="~/images/edit.png" /></a>
                                                           &nbsp;
                @*<a href="#" title="Delete" onclick="return DeleteDashboardBudget('@item.BudgetId');" style="float: left; width: 15px;"><img src="../images/delete.png" /></a>*@
                                                       
                <a href="javascript:void(0);" title="Delete" onclick="return OpenConfirmPopup('@item.BudgetId','Delete Dashboard Budget','',DeleteDashboardBudget,null); " style="float: left; width: 15px;">
                    <img src="@Url.Content("~/images/delete.png")" />
                </a>                                       
                </text>)
                                ))
            </div>            
        }
        else
        {

            <h2>No Record found</h2>
        }
    </div>
</div>
<script>
    $(function () {
        $('.table_scroll').fixedHeaderTable({ cloneHeadToFoot: true, altClass: 'odd', autoShow: true });
    });
</script>


<script>
    $(function () {
        SetGridSorting(SortDashboardBudgetGrid, "#gridContent");
    });
</script>