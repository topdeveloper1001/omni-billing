@model BillingSystem.Model.InsuranceCompany

@{
    ViewBag.Title = "InsuranceCompany";
    var saveButtonText = "Save";
    if (Model != null && Model.InsuranceCompanyId != 0)
    {
        saveButtonText = "Update";
    }
}
<div class="form" id="InsuranceCompanyFormDiv">
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <div class="rowTable">
            <label><span class="mandatoryStar"></span>Company Name:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyName, new { @maxlength = "50", @id = "txtInsuranceCompanyName", @class = "validate[required]" })
        </div>
        <div class="rowTable">
            <label>Company Street Address:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyStreetAddress, new { @maxlength = "50", @id = "txtInsuranceCompanyStreetAddress" })
        </div>
        <div class="rowTable">
            <label>Street Address 2:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyStreetAddress2, new { @maxlength = "50", @id = "txtInsuranceCompanyStreetAddress2" })
        </div>
        <div class="rowTable">
            <label>Company City:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyCity, new { @maxlength = "40", @id = "txtInsuranceCompanyCity" })
        </div>
        <div class="rowTable">
            <label>Company Denials Contact:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyDenialsContact, new { @maxlength = "40", @id = "txtInsuranceCompanyDenialsContact" })
        </div>
        <div class="rowTable">
            <label>TPA ID:</label>
            @Html.TextBoxFor(m => m.TPAId, new { @maxlength = "10", @class = "validate[optional[nameFormat]]", @title = "TPA ID" })
        </div>
        <div class="rowTable">
            <label><span class="mandatoryStar"></span>Payer ID:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyLicenseNumber, new { @maxlength = "30", @id = "txtInsuranceCompanyLicenseNumber", @class = "validate[required,custom[nameFormat]]", @title = "License Number" })
        </div>
    </div>

    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <div class="rowTable">
            <label>Company Type License:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyTypeLicense, new { @maxlength = "20", @id = "txtInsuranceCompanyTypeLicense" })
        </div>
        <div class="rowTable">
            <label>Authorization Contact:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyAuthorizationContact, new { @maxlength = "40" })
        </div>
        <div class="rowTable">
            <label>Related:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyRelated, new { @maxlength = "40", @id = "txtInsuranceCompanyRelated" })
        </div>
        <div class="rowTable">
            <label><span class="mandatoryStar"></span>License Number Expire Date:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyLicenseNumberExpire, "{0:MM/dd/yyyy}", new { @maxlength = "10", @id = "dtInsuranceCompanyLicenseNumberExpire", @class = "dtGreaterThanCurrent validate[required]", @onchange = "CheckValidDateNotLessThanTodayDate(this,'dtInsuranceCompanyLicenseNumberExpire')" })
        </div>
        <div class="rowTable">
            <label>Zip Code:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyZipCode, new { @maxlength = "9", @id = "txtInsuranceCompanyZipCode", @class = "validate[optional[nameFormat]]" })
        </div>
        <div class="rowTable">
            <label>Contact Email Address:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyEmailAddress, new { @maxlength = "40", @id = "txtInsuranceCompanyEmailAddress" })
        </div>
    </div>

    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <div class="rowTable">
            <label>Claims Contact:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyClaimsContact, new { @maxlength = "40", @id = "txtInsuranceCompanyClaimsContact" })
        </div>
        <div class="rowTable">
            <label>Main Contact:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyMainContact, new { @maxlength = "40", @id = "txtInsuranceCompanyMainContact" })
        </div>
        <div class="rowTable">
            <label>PO Box:</label>
            @Html.TextBoxFor(m => m.InsuranceCompanyPOBox, new { @maxlength = "50", @id = "txtInsuranceCompanyPOBox" })
        </div>
        <div class="rowTable">
            <label>Country:</label>
            <select id="ddlInsuranceCompanyCountry" class="marginBottomNone"></select>
            @Html.HiddenFor(m => m.InsuranceCompanyCountry, new { @id = "InsuranceCompanyCountry" })
        </div>
        <div class="rowTable">
            <label>Claims Contact Phone:</label>
            <select id="ddlClaimsContactPhoneCode" class="marginBottomNone telephoneCol1" onchange="return OnCountrySelection('#lblCompanyClaimsContactPhone', '#ddlClaimsContactPhoneCode');"></select>
            @Html.HiddenFor(m => m.InsuranceCompanyClaimsContactPhone, new { @id = "hdClaimsContactPhoneCode" })
            <span id="lblCompanyClaimsContactPhone" class="marginTopPhoneNo"></span>
            @Html.TextBoxFor(m => m.InsuranceCompanyClaimsContactPhone, new { @maxlength = "11", @class = "PhoneMask telephoneCol2 validate[optional[phone]]", @id = "txtInsuranceCompanyClaimsContactPhone" })@*validate[optional[internationalPhone]]*@
        </div>
        <div class="rowTable">
            <label>Denials Phone:</label>
            <select id="ddlDenialsPhoneCode" class="marginBottomNone telephoneCol1" onchange="return OnCountrySelection('#lblInsuranceCompanyDenialsPhone', '#ddlDenialsPhoneCode');"></select>
            <span id="lblInsuranceCompanyDenialsPhone" class="marginTopPhoneNo"></span>
            @Html.HiddenFor(m => m.InsuranceCompanyDenialsPhone, new { @id = "hdDenialsPhoneCode" })
            @Html.TextBoxFor(m => m.InsuranceCompanyDenialsPhone, new { @maxlength = "11", @class = "PhoneMask telephoneCol2 validate[optional[phone]]", @id = "txtInsuranceCompanyDenialsPhone" })
        </div>
    </div>

    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <div class="rowTable">
            <label>Main Phone:</label>
            <select id="ddlMainPhoneCode" class="marginBottomNone telephoneCol1" onchange="return OnCountrySelection('#lblInsuranceCompanyMainPhone', '#ddlMainPhoneCode');"></select>
            <span id="lblInsuranceCompanyMainPhone" class="marginTopPhoneNo"></span>
            @Html.HiddenFor(m => m.InsuranceCompanyMainPhone, new { @id = "hdMainPhoneCode" })
            @Html.TextBoxFor(m => m.InsuranceCompanyMainPhone, new { @maxlength = "11", @class = "PhoneMask telephoneCol2 validate[optional[phone]]", @id = "txtInsuranceCompanyMainPhone" })
        </div>
        <div class="rowTable">
            <label>Second Phone:</label>
            <select id="ddlSecondPhoneCode" class="marginBottomNone telephoneCol1" onchange="return OnCountrySelection('#lblInsuranceCompanySecondPhone', '#ddlSecondPhoneCode');"></select>
            <span id="lblInsuranceCompanySecondPhone" class="marginTopPhoneNo"></span>
            @Html.HiddenFor(m => m.InsuranceCompanySecondPhone, new { @id = "hdSecondPhoneCode" })
            @Html.TextBoxFor(m => m.InsuranceCompanySecondPhone, new { @maxlength = "11", @class = "PhoneMask telephoneCol2 validate[optional[phone]]", @id = "txtInsuranceCompanySecondPhone" })
        </div>
        <div class="rowTable">
            <label>Main Contact Phone:</label>
            <select id="ddlMainContactPhoneCode" class="marginBottomNone telephoneCol1" onchange="return OnCountrySelection('#lblMainContactPhoneCode', '#ddlMainContactPhoneCode');"></select>
            <span id="lblMainContactPhoneCode" class="marginTopPhoneNo"></span>
            @Html.HiddenFor(m => m.InsuranceCompanyMainContactPhone, new { @id = "hdMainContactPhoneCode" })
            @Html.TextBoxFor(m => m.InsuranceCompanyMainContactPhone, new { @maxlength = "11", @class = "PhoneMask telephoneCol2 validate[optional[phone]]", @id = "txtInsuranceCompanyMainContactPhone" })
        </div>
        <div class="rowTable">
            <label>Authorization Phone:</label>
            <select id="ddlAuthorizationPhoneCode" class="marginBottomNone telephoneCol1" onchange="return OnCountrySelection('#lblAuthorizationPhoneCode', '#ddlAuthorizationPhoneCode');"></select>
            <span id="lblAuthorizationPhoneCode" class="marginTopPhoneNo"></span>
            @Html.HiddenFor(m => m.InsuranceCompanyAuthorizationPhone, new { @id = "hdAuthorizationPhoneCode" })
            @Html.TextBoxFor(m => m.InsuranceCompanyAuthorizationPhone, new { @maxlength = "11", @class = "PhoneMask telephoneCol2 validate[optional[phone]]", @id = "txtInsuranceCompanyAuthorizationPhone" })
        </div>
        <div class="rowTable">
            <label>Company Fax:</label>
            <select id="ddlCompanyFaxCode" class="marginBottomNone telephoneCol1" onchange="return OnCountrySelection('#lblCompanyFaxCode', '#ddlCompanyFaxCode');"></select>
            <span id="lblCompanyFaxCode" class="marginTopPhoneNo"></span>
            @Html.HiddenFor(m => m.InsuranceCompanyFax, new { @id = "hdCompanyFaxCode" })
            @Html.TextBoxFor(m => m.InsuranceCompanyFax, new { @maxlength = "11", @class = "PhoneMask telephoneCol2 validate[optional[phone]]", @id = "txtInsuranceCompanyFax" })@*validate[optional[internationalFaxCode]]*@
        </div>
        <div class="rowTable">
            <label>Active:</label>
            @Html.CheckBoxFor(m => m.IsActive, new { @id = "chkIsActive" })
        </div>
    </div>
    <div class="clear"></div>
    <div class="btn-group">
        <div style="float: left;">
            <input type="submit" class="btn btn-primary edit-btn marginBtn" value="@saveButtonText" onclick="return ValidateInsuranceCompanyNameInsuranceCompanyLicenseNumber('@Model.InsuranceCompanyId    ');" />
            <button name="ClientCancel" class="btn btn-primary edit-btn marginBtn" type="button" onclick="return ClearAll();">Cancel</button>
        </div>
    </div>
</div>
