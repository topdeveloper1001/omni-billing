@using BillingSystem.Model

@model BillingSystem.Model.CustomModel.EncounterCustomModel

<div class="white-bg">
    <h1 class="main-heading">Authorization Detail</h1>
    <div class="grayBg">
        <h2>Insurance Company Information</h2>
        <div class="personal-detail">
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="rowTable">
                    <label>Insurance Company:</label>
                    <p>@Model.InsuranceCompanyName</p>
                    @Html.HiddenFor(m => m.EncounterStartTime, new { @Id = "hdEncounterStartTime" })
                </div>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="rowTable">
                    <label>Company Phone Number:</label>
                    <p>@Model.InsuranceCompanyPhoneNumber</p>
                </div>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="rowTable">
                    <label>Company Fax Number:</label>
                    <p>@Model.InsuranceCompanyFaxNumber</p>
                </div>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="rowTable">
                    <label>Adddress:</label>
                    <p>@Model.InsuranceCompanyAddress</p>
                </div>
            </div>

        </div>
    </div>
    <br />
    <div class="panel panel-default collapsecss ourcollapse" style="margin-bottom:12px;">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
            <h4 class="panel-title collapseTitle">
                <span class="glyphicon glyphicon-plus-sign"></span>&nbsp;Authorization List
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseOne" class="panel-collapse collapse in">
            <div class="panel-body">
                <div class="base-color">
                    <div class="form" id="divAuthList">
                        @{Html.RenderPartial("~/Views/Authorization/UserControls/_AuthorizationList.cshtml", Model.EncounterAuthorizationList);}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default collapsecss ourcollapse" style="margin-bottom:12px;">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
            <h4 class="panel-title collapseTitle">
                <span class="glyphicon glyphicon-plus-sign"></span>&nbsp;Authorization Documents
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseOne" class="panel-collapse collapse in">
            <div class="panel-body">
                <div class="base-color">
                    <div class="form" id="divAuthDocs">
                        @{Html.RenderPartial("~/Views/Authorization/UserControls/_attachmentsGrid.cshtml", Model.AuthDocs);}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="divhidepopup1" style="display: none;">
        <div class="popup-coverbg"></div>
        <div class="popup-frame">
            <div class="popup-main" style="margin: 25px auto">
                <div class="popup-content" style="min-height: 580px;">
                    <div class="popup-close" onclick="$('#divhidepopup').hide(); $.validationEngine.closePrompt('.formError', true);">X</div>
                    <div class="minHeight" style="min-height: 570px">
                        <div id="viewDocWindow1"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel-collapse collapse in grayBg" id="collapseCheck">
        <h2>Authorization</h2>
        <div class="panel-body">
            <div id="divAuthorizationAddEdit">
                <div class="row">
                    @{Html.RenderPartial("~/Views/Authorization/UserControls/_AuthorizationAddEdit.cshtml", Model.EncounterAuthorization);}
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="summery-bg">
        <div class="personal-detail">
            <div class="col-sm-6 col-lg-3">
                <div class="rowTable">
                    <label>Patient Name:</label>
                    <p>@Model.PatientName</p>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="rowTable">
                    <label>Birthdate:</label>
                    <p>@Model.PatientInfo.PersonBirthDate</p>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="rowTable">
                    <label>Age:</label>
                    <p>@Model.Age</p>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="rowTable">
                    <label>Emirati ID:</label>
                    <p>@Model.PersonEmiratesIDNumber</p>
                </div>
            </div>
        </div>
        <div class="personal-detail">
            <div class="col-sm-6 col-lg-3">
                <div class="rowTable">
                    <label>Primary Care Physician:</label>
                    <p>@Model.EncounterPhysicianTypeName</p>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="rowTable">
                    <label>Attending Physician:</label>
                    <p>@Model.EncounterPhysicianName</p>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="rowTable">
                    <label>Sex:</label>
                    <p>@Model.PatientInfo.PersonGender</p>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="rowTable">
                    <label>Medical Record Number:</label>
                    <p>@Model.PersonMedicalRecordNumber</p>
                </div>
            </div>
        </div>
    </div>
    <div class="grayBg">
        <h2>Encounter Information</h2>
        <div class="personal-detail">
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="rowTable">
                    <label>Encounter Number:</label>
                    <p>@Model.EncounterNumber</p>
                </div>
                <div class="rowTable">
                    <label>Encounter Start Time:</label>
                    <p>@Model.EncounterStartTime</p>
                </div>
                <div class="rowTable">
                    <label>Encounter Physician Type:</label>
                    <p>@Model.EncounterPhysicianTypeName</p>
                </div>

            </div>
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="rowTable">
                    <label>Encounter Attending Physician:</label>
                    <p>@Model.EncounterPhysicianName</p>
                </div>
                <div class="rowTable">
                    <label>Encounter Admit Reason:</label>
                    <p>@Model.EncounterAdmitReason</p>
                </div>
                <div class="rowTable">
                    <label>Encounter Patient Type:</label>
                    <p>@Model.EncounterPatientTypeName</p>
                </div>

            </div>
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="rowTable">
                    <label>Encounter Service Category:</label>
                    <p>@Model.EncounterServiceCategoryName</p>
                </div>
                <div class="rowTable">
                    <label>Encounter Speciality:</label>
                    <p>@Model.EncounterSpecialityName</p>
                </div>
                <div class="rowTable">
                    <label>Mode of Arrival:</label>
                    <p>@Model.EncounterModeOfArrivalName</p>
                </div>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="rowTable">
                    <label>Encounter Type:</label>
                    <p>@Model.EncounterTypeName</p>
                </div>
                <div class="rowTable">
                    <label>Encounter Admit Type:</label>
                    <p>@Model.EncounterAdmitTypeName</p>
                </div>
            </div>
        </div>
    </div>

    <br />
    <br />
</div>
