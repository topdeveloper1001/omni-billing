@model BillingSystem.Model.DocumentsTemplates

@{
    var filePath = Model != null && !string.IsNullOrEmpty(Model.FilePath) ? Model.FilePath : Url.Content("~/images/Noimage.jpg");
}


<div class="col-sm-4">
    <div class="rowTable">
        <label class="control-label"><span class="mandatoryStar"></span>Documents</label>
        <select id="ddlDocumentType" name="ddlDocumentType" class="validate[required]"></select>
        @Html.HiddenFor(m => m.DocumentTypeID)
    </div>
</div>
<div class="col-sm-4" id="divUploadDocuments">
    <div id="fdocupload">
        <div class="control-label">
            <form id="myDocForm" action='@Url.Action("PatientDocumentsOnChange", "PatientInfo")' method="post" enctype="multipart/form-data">
                @*@Html.Hidden("PatientId_Document")*@
                @Html.Hidden("OtherDocumentTypeId")
                @Html.HiddenFor(m => m.FilePath, new { @id = "hf_OtherDocCurrentSource" })
                <img id="psfimg" src="@filePath" class="user-img" style="width:100px;height:100px;" />
                <input type="file" onchange="ChangePatientAttachment();" name="file" id="imageLoadDoc" class="validate[required]" />
                <input type="submit" value="submit" id="btnSubmit" style="display: none;" />
            </form>
        </div>
    </div>
    <div id="div_ImageErrorDoc"></div>
    <button onclick="SavePatientDocuments(); return false;" class="blue-btn btn btn-primary edit-btn clear rowTable">Upload</button>
</div>

