@using BillingSystem.Common
@using BillingSystem.Models
@model DocumentsView

<div class="table editform" id="divDocumentUpload" style="margin-top: 2%; margin-bottom: 7%;">
    @{Html.RenderPartial("~/Views/PatientInfo/UserControls/_attachmentAddEdit.cshtml", Model.CurrentAttachment);}
</div>

<div class="panel panel-default collapsecss ourcollapse bordertable" style="margin-top: 5%;">
    <div class="panel-heading">
        <h1 class="panel-title collapseTitle">Uploaded documents</h1>
    </div>
    <div class="panel-body">
        <div class="base-color">
            <div class="form" id="divDocumentsGrid">
                @{Html.RenderPartial("~/Views/PatientInfo/UserControls/_attachmentsGrid.cshtml", Model.Attachments);}
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/PatientInfo/PatientDocuments.js?@Helpers.CurrentAssemblyTicks"></script>
