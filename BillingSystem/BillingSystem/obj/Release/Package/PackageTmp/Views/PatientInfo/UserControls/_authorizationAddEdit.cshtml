@model BillingSystem.Model.Authorizations

@{
    ViewBag.Title = "Realtion address";
}
<div>
    @if (Model != null)
    {
        <div class="clear"></div>
        <div class="col-sm-6">
            <div class="rowTable">
                <label><span class="mandatoryStar"></span>Authorization Type:</label>
                <select id="ddlAuthorizationType" name="ddlAuthorizationType" class="validate[required]"></select>
                @Html.HiddenFor(m => m.AuthorizationType, new { @id = "hdAuthorizationType" })
            </div>
            <div class="rowTable">
                <label><span class="mandatoryStar"></span>Authorization Id:</label>
                @Html.TextBoxFor(m => m.AuthorizationID, new { @maxlength = "25", @Id = "txtAuthorizationID", @class = "validate[required]" })
                @Html.HiddenFor(m => m.EncounterID, new { @Id = "hdEncounterID" })
                @Html.HiddenFor(m => m.PatientId, new { @Id = "hdPatientId" })
            </div>
            <div class="rowTable">
                <label><span class="mandatoryStar"></span>Authorization Start:</label>
                @Html.TextBoxFor(m => m.AuthorizationStart, "{0:MM/dd/yyyy}", new { @maxlength = "50", @ID = "txtAuthorizationStart", @class = "dtGeneral validate[required]",@onchange = "CheckTwoDates($('#txtAuthorizationStart'),$('#txtAuthorizationEnd'),'txtAuthorizationStart')" })
            </div>
            <div class="rowTable">
                <label><span class="mandatoryStar"></span>Authorization End:</label>
                @Html.TextBoxFor(m => m.AuthorizationEnd, "{0:MM/dd/yyyy}", new { @maxlength = "50", @ID = "txtAuthorizationEnd", @class = "dtGeneral validate[required]",@onchange = "CheckTwoDates($('#txtAuthorizationStart'),$('#txtAuthorizationEnd'),'txtAuthorizationEnd')" })
            </div>
        </div>
        <div class="col-sm-6">
            <div class="rowTable">
                <label>Comments:</label>
                @Html.TextBoxFor(m => m.AuthorizationComments, new { @maxlength = "100", @ID = "txtAuthorizationComments" })
            </div>
            <div class="rowTable">
                <label>Authorization Denial Code:</label>
                <select id="ddlAuthorizationDenialCode" name="ddlAuthorizationDenialCode" class="validate[required]"></select>
                @Html.HiddenFor(m => m.AuthorizationDenialCode, new { @id = "hdAuthorizationDenialCode" })
            </div>
            <div class="rowTable">
                <label>Authorization Limit:</label>
                @Html.TextBoxFor(m => m.AuthorizationLimit, new { @maxlength = "10", @ID = "txtAuthorizationLimit", @class = "validate[required]" })
            </div>
            <div class="rowTable">
                &nbsp;
            </div>
        </div>
    }
</div>
<div class="btn-group">
    <div id="overlay" class="web_dialog_overlay">
    </div>
    @if (Model.Id != 0)
    {
        <input type="submit" class="blue-btn btn btn-primary edit-btn marginBtn" value="Update" onclick="IsValidAuthorization('@Model.AuthorizationID')" />
    }
    else
    {
        <input type="submit" class="blue-btn btn btn-primary edit-btn marginBtn" style="margin-left: 2px;" value="Save" onclick="IsValidAuthorization('@Model.AuthorizationID')" />
    }
    <input type="submit" class="blue-btn btn btn-primary edit-btn marginBtn" value="Cancel" onclick="$('#divhidepopup').hide(); $('.hidepopup').hide();" />
    <br />
</div>