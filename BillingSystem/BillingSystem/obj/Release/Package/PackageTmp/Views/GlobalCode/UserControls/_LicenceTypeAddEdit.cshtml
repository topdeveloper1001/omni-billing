@using BillingSystem.Model
@model GlobalCodes
<style>
    .btn-group {
        padding: 10px;
    }

    input[type="radio"], input[type="checkbox"] {
        margin: 0;
    }
</style>

@{
    var btnSave = "Save";
    if (Model.GlobalCodeID > 0)
    {
        btnSave = "Update";
    }
}

<div class="form patientTable" id="globalCodeForm">
    @Html.HiddenFor(m => m.GlobalCodeID, new { @id = "hfGlobalCodeID" })
    <div>
        <div class="col-sm-3">
            <div class="rowTable">
                <label class="control-label"><span class="mandatoryStar"></span>User Role:</label>
                <select id="ddlUserRole" class="validate[required]"></select>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="rowTable">
                <label class="control-label"><span class="mandatoryStar"></span>License Type:</label>
                @Html.TextBoxFor(m => m.GlobalCodeName, new { @ID = "txtGlobalCodeName", @maxlength = "50", @class = "validate[required]" })
            </div>

        </div>

    </div>
    <div class="clear"></div>
    <div class="btn-group">
        <input type="submit" class="blue-btn btn btn-primary edit-btn marginBtn" onclick="return SaveLicenceType();" value="@btnSave" />
        <button name="ClientCancel" class="blue-btn btn btn-primary edit-btn marginBtn" type="button" onclick="ClearLicenseType();">Cancel</button>
    </div>
</div>
