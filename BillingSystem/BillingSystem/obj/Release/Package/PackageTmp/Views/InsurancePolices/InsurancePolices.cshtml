@using BillingSystem.Common
@model BillingSystem.Models.InsurancePolicesView

@{
    ViewBag.Title = "InsurancePolices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="white-bg" id="DivInsurancePlan">
    <div class="panel panel-default collapsecss ourcollapse">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
            <h4 class="panel-title collapseTitle">
                <span class="glyphicon glyphicon-plus-sign"></span>&nbsp;Add Insurance Policy
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseOne" class="panel-collapse collapse">
            <div class="panel-body">
                <div class="base-color">
                    <div class="form">
                        @{ Html.RenderPartial("~/Views/InsurancePolices/UserControls/_insurancePolicesAddEdit.cshtml", Model.CurrentInsurancePolices);}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default collapsecss ourcollapse bordertable">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
            <h4 class="panel-title collapseTitle">
                <span>
                    <img src="@Url.Content("~/images/list.png")" />
                </span>&nbsp;Policies List
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseTwo" class="panel-collapse collapse in tableImg">
            <div class="panel-body">
                <div class="base-color">
                    <div id="InsurancePolicesListDiv">
                        @{Html.RenderPartial("~/Views/InsurancePolices/UserControls/_PolicesList.cshtml", Model.InsurancePolicesList);}
                        @*<div class="partialContents" data-url="@Url.Action("ListView", "InsurancePolices")">
                                <img src="@Url.Content("~/images/indicator.white.gif")" />
                                Loading ...
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
</div>
<script src="~/Scripts/InsurancePolices/InsurancePolices.js?@Helpers.CurrentAssemblyTicks"></script>
<script src="~/Scripts/Common/confirmEvents.js?@Helpers.CurrentAssemblyTicks"></script>
