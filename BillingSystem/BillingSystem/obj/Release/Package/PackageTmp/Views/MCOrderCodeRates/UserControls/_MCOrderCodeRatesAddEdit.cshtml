@model BillingSystem.Model.MCOrderCodeRates

<style>
    .btn-group {
        margin-bottom: 20px;
        margin-left: 10px;
    }

    .clear { clear: both; }

    select { margin-bottom: 10px; }
</style>

@{
    string btnSaveText = "Save";
    if (Model.MCOrderCodeRatesId != 0)
    {
        btnSaveText = "Update";
    }
}
<div class="form" id="MCOrderCodeRatesFormDiv">
    <div class="col-sm-6">
        @Html.HiddenFor(m => m.MCOrderCodeRatesId, new {@id = "hdMCOrderCodeRatesId"})
        <div class="rowTable">
            <label><span class="mandatoryStar"></span>Manage Care Code:</label>
            @Html.TextBoxFor(m => m.MCCode, new {@maxlength = "10", @id = "txtMCCode1", @disabled = "disabled", @class = "validate[required]"})
            @*<select id="ddlMCCode" class="validate[required]">
                </select>
                @Html.HiddenFor(m => m.MCCode, new {id = "hdMCCode"})*@
        </div>
        <div class="rowTable">
            <label><span class="mandatoryStar"></span>Order Type:</label>
            <select id="ddlOrderType" class="validate[required]" onchange=" ResetOrderCode(); ">
                <option value="0">--Select--</option>  
                <option value="3">CPT</option>  
                <option value="5">DRUG</option>  
                <option value="8">Service Code</option> 
                <option value="99">ELSE</option>
            </select>
            @Html.HiddenFor(m => m.OrderType, new {id = "hdOrderType"})
        </div>
        <div class="rowTable">
            <label><span class="mandatoryStar"></span>Order Code:</label>
            @Html.TextBoxFor(m => m.OrderCode, new {@maxlength = "20", @id = "txtOrderCode", @class = "validate[required]", @onblur = "GetOrderCodeDesc();"})
        </div>
    </div>
    <div class="col-sm-6">
        <div class="rowTable">
            <label>Order Code Description:</label>
            @Html.TextAreaFor(m => m.OrderCodeDescription, new {@maxlength = "1000", @id = "txtOrderCodeDescription"})
        </div>
        <div class="rowTable">
            <label>Order Code Add Ons:</label>
            @Html.TextBoxFor(m => m.OrderCodeAddOns, new {@maxlength = "10", @id = "txtOrderCodeAddOns"})
        </div>
        <div class="rowTable" style="display: none;" id="divPerDiemRate">
            <label><span class="mandatoryStar"></span>Order Code PerDiem Rate:</label>
            @Html.TextBoxFor(m => m.OrderCodePerDiemRate, new {@maxlength = "10", @id = "txtOrderCodePerDiemRate"})
        </div>
        <div class="rowTable" style="display: none;">
            <label>AddOn Table Number:</label>
            @Html.TextBoxFor(m => m.OrderCodeAddOnTableNumber, new {@maxlength = "10", @id = "txtOrderCodeAddOnTableNumber"})
        </div>
    </div>
    @*<div class="col-sm-12" style="display: none;" id="divMcRulesAddEdit">
        <div class="panel-body">
            <div class="panel-body">
                <div class="base-color">
                    <div class="form">   
                        @{ Html.RenderPartial("~/Views/MCRulesTable/UserControls/_MCRulesTableAddEdit.cshtml", Model.MCRulesTableAddEdit); }
                    </div>
                </div>
            </div>
        </div>
    </div>*@
    <div class="clear"></div>
    <div class="btn-group">
        <div style="float: left;">
            <input type="submit" id="btnSave" class="btn btn-primary edit-btn marginBtn" value="@btnSaveText" onclick=" return SaveMCOrderCodeRates(); " />
            <button name="ClientCancel" id="btnCancel" class="btn btn-primary edit-btn marginBtn" type="button" onclick=" return ClearMCOrderCodeRatesForm(); ">Cancel</button>
        </div>
    </div>
</div>