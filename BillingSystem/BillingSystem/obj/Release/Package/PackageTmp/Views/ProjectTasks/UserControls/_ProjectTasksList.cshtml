@using BillingSystem.Model.CustomModel
@model List<ProjectTasksCustomModel>

<div class="form">
    <div class="table-responsive">
        @if (Model != null && Model.Count > 0)
        {
            var grid = new WebGrid(Model, ajaxUpdateContainerId: "gridProjectTasksContent");
            <div id="gridProjectTasksContent">
                @grid.GetHtml(htmlAttributes: new { id = "ProjectTasksTable" }, tableStyle: "table table-grid", headerStyle: "gridHead", footerStyle: "gridFooter",
                    rowStyle: "gridRow", alternatingRowStyle: "gridRow", columns: grid.Columns(
                                grid.Column("ProjectTaskId", "ProjectTaskId"),
                                grid.Column("TaskNumber", "TaskNumber"),
                                grid.Column("TaskName", "TaskName"),
                                grid.Column("TaskDescription", "TaskDescription"),
                                grid.Column("StartDate", "StartDate"),
                                grid.Column("EstCompletionDate", "EstCompletionDate"),
                                grid.Column("Responsible", "UserResponsible"),
                                grid.Column("CorporateId", "CorporateId"),
                                grid.Column("FacilityId", "FacilityId"),
                                grid.Column("CreatedDate", "CreatedDate"),
                                grid.Column("IsActive", "IsActive"),
                grid.Column(header: "Action", format: @<text>
                <a href="javascript:void(0);" onclick="EditProjectTasks('@item.ProjectTasksId')" style="float: left; margin-right: 7px; width: 15px;">
                    <img src="@Url.Content("~/images/edit.png")" /></a>
                    @*<a href="javascript:void(0);" title="Delete" onclick="return DeleteProjectTasks('@item.ProjectTasksId');" style="float: left; width: 15px;">
                    <img src="@Url.Content("~/images/delete.png")" /></a>*@
                <a href="javascript:void(0);" title="Delete" onclick="return OpenConfirmPopup('@item.ProjectTasksId','Delete Project Tasks','',DeleteProjectTasks,null); " style="float: left; width: 15px;">
                    <img src="@Url.Content("~/images/delete.png")" />
                </a>

                                                       </text>)
                                ));
            </div>            
        }
        else
        {

            <h2>No Record found</h2>
        }
    </div>
</div>
