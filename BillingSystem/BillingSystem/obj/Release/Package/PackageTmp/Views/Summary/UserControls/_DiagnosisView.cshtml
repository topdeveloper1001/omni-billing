@using BillingSystem.Model.CustomModel
@model DiagnosisCustomModel

    <div class="panel panel-default collapsecss ourcollapse">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseDiagnosisAddEdit">
            <h4 class="panel-title collapseTitle">
                <span class="glyphicon glyphicon-plus-sign"></span>&nbsp;Diagnosis <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseDiagnosisAddEdit" class="panel-collapse collapse in">
            <div class="panel-body">
                <div class="base-color">
                    <div class="form" id="diagAddEdit">
                        @{ Html.RenderPartial("~/Views/Diagnosis/UserControls/_DiagnosisAddEdit.cshtml", Model); }
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="panel panel-default collapsecss ourcollapse bordertable">
        <div class="panel-heading" data-parent="#accordion" data-toggle="collapse" href="#collapseDiagnosisList">
            <h4 class="panel-title collapseTitle">
                <span>
                    <img src="@Url.Content("~/images/list.png")">
                </span>Current Diagnosis List
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseDiagnosisList" class="panel-collapse tableImg collapse in">
            <div class="panel-body">
                <div class="base-color">
                    @*<div class="table-responsive" id="CurrentDiagnosisGrid">
                            @{Html.RenderPartial("~/Views/Diagnosis/UserControls/_DiagnosisList.cshtml", Model.CurrentDiagnosis);}
                        </div>*@
                    <div class="table table-striped">
                        <table id="diagnosisCurrent" class="display table table_scroll" cellspacing="0">
                            <thead class="gridHead">
                                <tr class="gridRow">
                                    <th scope="col">Id</th>
                                    <th scope="col">DiagnosisCodeId</th>
                                    <th scope="col">Type</th>
                                    <th scope="col">Code</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Notes</th>
                                    <th scope="col">Initially Entered On</th>
                                    <th scope="col">Added By</th>
                                    <th class="center" scope="col">Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default collapsecss ourcollapse bordertable">
        <div class="panel-heading" data-parent="#accordion" data-toggle="collapse" href="#collapsePhyFavDiagnosisList">
            <h4 class="panel-title collapseTitle">
                <span>
                    <img src="~/images/list.png">
                </span>Physician Fav. Diagnosis List
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapsePhyFavDiagnosisList" class="panel-collapse tableImg collapse in">
            <div class="panel-body">
                <div class="base-color">
                    <div class="table table-striped">
                        <table id="diagnosisfav" class="display table table_scroll" cellspacing="0">
                            <thead class="gridHead">
                                <tr class="gridRow">
                                    <th scope="col">DescId</th>
                                    <th scope="col">Activity</th>
                                    <th scope="col">Code</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">User Define Description</th>
                                    <th class="center" scope="col">Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                    @*<div class="table-responsive" id="phyFavDiagnosisGrid">
                            @{Html.RenderPartial("~/Views/Diagnosis/UserControls/_PhyFavDiagnosisList.cshtml", Model.FavoriteDiagnosisList);}
                        </div>*@
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default collapsecss ourcollapse bordertable">
        <div class="panel-heading" data-parent="#accordion" data-toggle="collapse" href="#collapsePreviousDiagnosisList">
            <h4 class="panel-title collapseTitle">
                <span>
                    <img src="@Url.Content("~/images/list.png")">
                </span>Previous Diagnosis List
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapsePreviousDiagnosisList" class="panel-collapse tableImg collapse in">
            <div class="panel-body">
                <div class="base-color">

                    <div class="table table-striped">
                        <table id="diagnosisprevious" class="display table table_scroll" cellspacing="0">
                            <thead class="gridHead">
                                <tr class="gridRow">
                                    <th scope="col">Diagnose Id</th>
                                    <th scope="col">Encounter Number</th>
                                    <th scope="col">Type</th>
                                    <th scope="col">Code</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Notes</th>
                                    <th scope="col">Initially Entered On</th>
                                    <th class="center" scope="col">Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                    @*<div class="table-responsive" id="previousDiagnosisGrid">
                            @{Html.RenderPartial("~/Views/Diagnosis/UserControls/_previousDiagnosisList.cshtml", Model.previousDiagnosisList);}
                        </div>*@
                </div>
            </div>
        </div>
    </div>
