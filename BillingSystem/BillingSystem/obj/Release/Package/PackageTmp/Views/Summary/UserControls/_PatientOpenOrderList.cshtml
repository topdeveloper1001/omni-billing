@model IEnumerable<BillingSystem.Model.CustomModel.OpenOrderCustomModel>

                      <style type="text/css">
                          .emtptyRow {
                              background-color: yellow;
                          }
                      </style> 
 @if (Model != null && Model.Any())
                    {

                        var grid = new WebGrid(Model, ajaxUpdateContainerId: "SummaryTabOrdersGridContent", canPage: false, canSort: true);
                        <div id="SummaryTabOrdersGridContent">
                            @grid.GetHtml(htmlAttributes: new { id = "SummaryTabOrdersGridContent" }, tableStyle: "table table_scroll_Orders", headerStyle: "gridHead", footerStyle: "gridFooter", rowStyle: "gridRow", alternatingRowStyle: "gridAltRow",
            columns:
            grid.Columns(
                    grid.Column("OrderCode", "Order Code", canSort: true, style: "col3"),
                    grid.Column("OrderDescription", "Order Description", canSort: true, style: "width250"),
                    grid.Column("CategoryName", "Order Category", canSort: true, style: "col6"),
                    grid.Column("SubCategoryName", "Order Sub-Category", canSort: true, style: "col7"),
                    grid.Column("Status", "Status", canSort: true, style: "col7"),
                    grid.Column("Quantity", "Quantity", canSort: true, style: "col2"),
                    grid.Column("FrequencyText", "Frequency", canSort: true, style: "col5"),
                    grid.Column("PeriodDays", "Duration", canSort: true, style: "col8")
                    ))
                        </div>
                    }
                    else
                    {
                        <h2>No Record found</h2>
                    }
<script>
    $(function () {
        if ($('#SummaryTabOrdersGridContent tr').length > 1) {
            $('.table_scroll_Orders').fixedHeaderTable({ cloneHeadToFoot: true, altClass: 'odd', autoShow: true });
        }
        //SetGridSorting(SortPatientOpenOrders, "#SummaryTabOrdersGridContent");
    });
</script>  