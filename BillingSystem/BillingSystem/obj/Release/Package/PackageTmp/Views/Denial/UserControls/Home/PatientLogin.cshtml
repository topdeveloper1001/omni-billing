            $("#" + lblmsg).text("Please select country code.");
            $("#" + phoneid).val("");
        }
        else {
            if (!reg.test($("#" + phoneid).val())) {
                $("#" + lblmsg).text("Please enter correct format of phone number.");
                $("#" + phoneid).val("");
            }
            else {
                $("#" + lblmsg).text("");
            }
        }
