@using BillingSystem.Model.CustomModel
@model List<ProjectDashboardCustomModel>

<div class="form">
    <div class="table-responsive">
        @if (Model != null && Model.Count > 0)
        {
            var grid = new WebGrid(Model, ajaxUpdateContainerId: "gridProjectDashboardContent",canPage:false);
            <div id="gridProjectDashboardContent">
                @grid.GetHtml(htmlAttributes: new {id = "ProjectDashboardTable"}, tableStyle: "table table-grid", headerStyle: "gridHead", footerStyle: "gridFooter",
                    rowStyle: "gridRow", alternatingRowStyle: "gridRow", columns: grid.Columns(
                        grid.Column("ProjectNumber", header: "Project Number", canSort: false),
                        grid.Column("ProjectDescription", header: "Project Description", canSort: false),
                        grid.Column("RepsonsibleParty", header: "Repsonsible Party", canSort: false),
                        grid.Column("ProjectStartDate", header: "Start Date", canSort: false),
                        grid.Column("ProjectEstimatedCompletionDate", header: "Estimated Completion Date", canSort: false),
                        grid.Column("ProjectRevisedCompletionDate", header: "Revised Completion Date", canSort: false),
                        grid.Column("JanTarget", header: "Jan", canSort: false,format:@<text>
                                                                                           @if (!string.IsNullOrEmpty(@item.JanTarget))
                                                                                           {
                                                                                               <span>@string.Format("{0:0.00%}", Convert.ToDecimal(item.JanTarget)/100)</span>
                                                                                           }
                                                                                       </text>),
                        grid.Column("FebTarget", header: "Feb", canSort: false,format:@<text>
                                                                                           @if (!string.IsNullOrEmpty(@item.FebTarget))
                                                                                           {
                                                                                               <span>@string.Format("{0:0.00%}", Convert.ToDecimal(item.FebTarget)/100)</span>
                                                                                           }
                                                                                       </text>),
                        grid.Column("MarTarget", header: "Mar", canSort: false,format:@<text>
                                                                                           @if (!string.IsNullOrEmpty(@item.MarTarget))
                                                                                           {
                                                                                               <span>@string.Format("{0:0.00%}", Convert.ToDecimal(item.MarTarget)/100)</span>
                                                                                           }
                                                                                       </text>),
                        grid.Column("AprTarget", header: "Apr", canSort: false,format:@<text>
                                                                                           @if (!string.IsNullOrEmpty(@item.AprTarget))
                                                                                           {
                                                                                               <span>@string.Format("{0:0.00%}", Convert.ToDecimal(item.AprTarget)/100)</span>
                                                                                           }
                                                                                       </text>),
                        grid.Column("MayTarget", header: "May", canSort: false,format:@<text>
                                                                                           @if (!string.IsNullOrEmpty(@item.MayTarget))
                                                                                           {
                                                                                               <span>@string.Format("{0:0.00%}", Convert.ToDecimal(item.MayTarget)/100)</span>
                                                                                           }
                                                                                       </text>),
                        grid.Column("JunTarget", header: "Jun", canSort: false,format:@<text>
                                                                                           @if (!string.IsNullOrEmpty(@item.JunTarget))
                                                                                           {
                                                                                               <span>@string.Format("{0:0.00%}", Convert.ToDecimal(item.JunTarget)/100)</span>
                                                                                           }
                                                                                       </text>),
                        grid.Column("JulTarget", header: "Jul", canSort: false,format:@<text>
                                                                                           @if (!string.IsNullOrEmpty(@item.JulTarget))
                                                                                           {
                                                                                               <span>@string.Format("{0:0.00%}", Convert.ToDecimal(item.JulTarget)/100)</span>
                                                                                           }
                                                                                       </text>),
                        grid.Column("AugTarget", header: "Aug", canSort: false,format:@<text>
                                                                                           @if (!string.IsNullOrEmpty(@item.AugTarget))
                                                                                           {
                                                                                               <span>@string.Format("{0:0.00%}", Convert.ToDecimal(item.AugTarget)/100)</span>
                                                                                           }
                                                                                       </text>),
                        grid.Column("SepTarget", header: "Sep", canSort: false,format:@<text>
                                                                                           @if (!string.IsNullOrEmpty(@item.SepTarget))
                                                                                           {
                                                                                               <span>@string.Format("{0:0.00%}", Convert.ToDecimal(item.SepTarget)/100)</span>
                                                                                           }
                                                                                       </text>),
                        grid.Column("OctTarget", header: "Oct", canSort: false,format:@<text>
                                                                                           @if (!string.IsNullOrEmpty(@item.OctTarget))
                                                                                           {
                                                                                               <span>@string.Format("{0:0.00%}", Convert.ToDecimal(item.OctTarget)/100)</span>
                                                                                           }
                                                                                       </text>),
                        grid.Column("NovTarget", header: "Nov", canSort: false,format:@<text>
                                                                                           @if (!string.IsNullOrEmpty(@item.NovTarget))
                                                                                           {
                                                                                               <span>@string.Format("{0:0.00%}", Convert.ToDecimal(item.NovTarget)/100)</span>
                                                                                           }
                                                                                       </text>),
                        grid.Column("DecTarget", header: "Dec", canSort: false,format:@<text>
                                                                                           @if (!string.IsNullOrEmpty(@item.DecTarget))
                                                                                           {
                                                                                               <span>@string.Format("{0:0.00%}", Convert.ToDecimal(item.DecTarget)/100)</span>
                                                                                           }
                                                                                       </text>)
                        ))
            </div>
        }
        else
        {
            <h2>No Record found</h2>
        }
    </div>
</div>
