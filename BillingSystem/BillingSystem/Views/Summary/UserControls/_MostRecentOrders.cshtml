@using Kendo.Mvc.UI
@using BillingSystem.Model.CustomModel

@*@model IEnumerable<OpenOrderCustomModel>*@
@model IEnumerable<OpenOrderCustomModel>

   @if (Model != null)
   {
       var grid = new WebGrid(Model, ajaxUpdateContainerId: "gridContentOpenOrder", canPage: false);
       <div id="gridContentOpenOrder">
           @grid.GetHtml(htmlAttributes: new {id = "PhysicianMostOrderedGrid"}, tableStyle: "table", headerStyle: "gridHead", footerStyle: "gridFooter", rowStyle: "gridRow", alternatingRowStyle: "gridAltRow",
               columns:
                   grid.Columns(
                       grid.Column("OrderCount", header: "Orders Count", canSort: false, style: "col2"),
                       //grid.Column("OrderType", header: "Order Type", canSort: true, style: "col3"),
                       grid.Column("OrderTypeName", header: "Activity Code", canSort: false, style: "col4"),
                       grid.Column("OrderCode", header: "Order Code", canSort: false, style: "col5"),
                       grid.Column("OrderDescription", header: "Code Description", canSort: false, style: "col6")
                       )
               )</div>
   }
   else
   {
       <h2>No Record found</h2>
   }
<script>
    $(function () {
        $('#PhysicianMostOrderedGrid').fixedHeaderTable({ cloneHeadToFoot: true, altClass: 'odd', autoShow: true });
        //SetGridSorting(SortPhysicianList, "#gridContentOpenOrder");
    });
</script>