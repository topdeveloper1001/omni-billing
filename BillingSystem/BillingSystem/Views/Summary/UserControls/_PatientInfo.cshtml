@model BillingSystem.Model.CustomModel.PatientInfoCustomModel

<div class="personal-detail">
    <div class="col-sm-6 col-lg-3">
        <label>Patient Name:</label>
        <p>@Model.PatientName</p>
    </div>
    <div class="col-sm-6 col-lg-3">
        <label>Birthdate:</label>
        <p>
            @if (Model.PatientInfo.PersonBirthDate != null)
            {@Model.PatientInfo.PersonBirthDate}
        </p>
    </div>
    <div class="col-sm-6 col-lg-3">
        <label>Age:</label>
        <p>@Model.PatientInfo.PersonAge</p>
    </div>
    <div class="col-sm-6 col-lg-3">
        <label>Emirati ID:</label>
        <p>@Model.PatientInfo.PersonEmiratesIDNumber</p>
    </div>
</div>
<div class="personal-detail">
    @*<div class="col-sm-6 col-lg-3">
        <label>Primary Care Physician:</label>
        <span>John Carrey</span>
    </div>
    <div class="col-sm-6 col-lg-3">
        <label>Attending Physician:</label>
        <span>John Carrey</span>
    </div>*@
    <div class="col-sm-6 col-lg-3">
        <label>Sex:</label>
        <p>@Model.PatientInfo.PersonGender</p>
    </div>
    <div class="col-sm-6 col-lg-3">
        <label>Medical Record Number:</label>
        <p>@Model.PatientInfo.PersonMedicalRecordNumber</p>
        @Html.HiddenFor(m => m.PatientInfo.PersonMedicalRecordNumber, new { @id = "hdPatientMRN" })
    </div>
    <div class="col-sm-6 col-lg-3">
    </div>
    @if (Model != null && Model.PatientInfo != null && Model.PatientInfo.PersonVIP != null)
    {
        <div class="col-sm-6 col-lg-3">
            <div class="vip-img">
                <img src="../images/vip2.png" width="30">
            </div>
        </div> 
    }
</div>
