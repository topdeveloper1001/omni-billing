
@*@model BillingSystem.Model.MedicalVital*@
@model BillingSystem.Model.CustomModel.MedicalVitalCustomModel
@{
    ViewBag.Title = "MedicalVital";
}
<div class="form" id="MedicalVitalFormDiv">
    @*// BBCOLUMNSHERE*@
    <div class="col-sm-6">
        <div class="row">
            <h5 class="col-lg-12">Blood Pressure :</h5>
            <div class="col-sm-6">
                <div class="rowTable">
                    <label>Systolic:</label>
                    @Html.TextBoxFor(m => m.BloodPressureSystolic, new { @maxlength = "10", @id = "txtBloodPressureSystolic", @class = "validate[optional[number]]" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="rowTable">
                    <label>Diastolic:</label>
                    @Html.TextBoxFor(m => m.BloodPressureDiastolic, new { @maxlength = "10", @id = "txtBloodPressureDiastolic", @class = "validate[optional[number]]" })
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-12 col-md-12 col-lg-12">
        <div class="row">
            <div class="col-sm-12 col-md-5 col-lg-3">
                <h5 class="col-lg-12 row">Temperature :</h5>
                <div class="col-sm-6 row">
                    <div class="rowTable">
                        @Html.TextBoxFor(m => m.Temperature, new { @maxlength = "10", @id = "txtTemperature", @class = "validate[optional[number]]" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="rowTable">
                        <div class="radiobutton">
                            @Html.RadioButtonFor(model => model.TemperatureUOM, "726", new { id = "rbtnTempC", @checked = true })
                            @Html.Label("C", "°C")
                        </div>
                        <div class="radiobutton">
                            @Html.RadioButtonFor(model => model.TemperatureUOM, "708", new { id = "rbtnTempF" })
                            @Html.Label("F", "°F")
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-3 col-lg-4 row">
                <h5 class="col-lg-12">Pulse :</h5>
                <div class="col-sm-12">
                    <div class="rowTable">
                        @Html.TextBoxFor(m => m.PulseRate, new { @maxlength = "10", @id = "txtPulseRate", @class = "validate[optional[number]]" })
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-5 col-lg-4 row">
                <h5 class="col-lg-12">Weight :</h5>
                <div class="col-sm-6">
                    <div class="rowTable">
                        @Html.TextBoxFor(m => m.Weight, new { @maxlength = "10", @id = "txtWeight", @class = "validate[optional[number]]" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="rowTable">
                        <div class="radiobutton">
                            @Html.RadioButtonFor(model => model.WeightUOM, "713", new { id = "rbtnWeightKg", @checked = true })
                            @Html.Label("kg", "kg")
                        </div>
                        <div class="radiobutton">
                            @Html.RadioButtonFor(model => model.WeightUOM, "1021", new { id = "rbtnWeightLbs" })
                            @Html.Label("lbs", "lbs")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="clear"></div>
    <div class="col-sm-12">
        <div class="button-block">
            @*@if (Model.MedicalVitalID != 0)
                {  <input type="submit" class="btn btn-primary edit-btn marginrightBtn" value="Update" onclick="return SaveMedicalVital('@Model.MedicalVitalID');" />
                }
                else
                {
                    <input type="submit" onclick="return SaveMedicalVital('@Model.MedicalVitalID');" class="btn btn-primary edit-btn marginrightBtn" value="Save" />
                }*@
            <input type="submit" onclick="return SaveMedicalVital('0');" class="btn btn-primary edit-btn marginrightBtn" value="Save" />
            <button name="ClientCancel" class="btn btn-primary edit-btn marginrightBtn" type="button" onclick="return ClearVitalAll();">Cancel</button>
            <input type="submit" class="btn btn-primary edit-btn marginrightBtn" value="Add Nurse Notes" onclick="ClickNurseNote();" />
            <br />
            <span id="lblMessage" style="display: none; font-weight: bold; margin-top: 5px;">Fields marked with <span style="color: red;">* </span>are mendatory.</span>

        </div>
        <!--<a href="#" class="move" data-toggle="tab"  ></a>-->
    </div>
</div>
