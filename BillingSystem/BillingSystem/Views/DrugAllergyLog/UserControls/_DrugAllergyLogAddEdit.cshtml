@using BillingSystem.Model
@model DrugAllergyLog

<style>
    .btn-group {
        margin-left: 10px;
        margin-bottom: 20px;
    }

    .clear {
        clear: both;
    }

    select {
        margin-bottom: 10px;
    }
</style>

@{
    var btnSaveText = "Save";
    if (Model.Id != null && Model.Id != 0)
    {
        btnSaveText = "Update";
    }
}
<div class="form" id="DrugAllergyLogFormDiv">
    @*// BBCOLUMNSHERE*@
   <div class="col-sm-3">
      <div class="rowTable">
        <label>Id:</label>
        @Html.TextBoxFor(m => m.Id, new { @maxlength = "10", @id = "txtId" })
      </div>
      <div class="rowTable">
        <label>OrderCode:</label>
        @Html.TextBoxFor(m => m.OrderCode, new { @maxlength = "50", @id = "txtOrderCode" })
      </div>
      <div class="rowTable">
        <label>OrderCategory:</label>
        @Html.TextBoxFor(m => m.OrderCategory, new { @maxlength = "50", @id = "txtOrderCategory" })
      </div>
      <div class="rowTable">
        <label>OrderSubCategory:</label>
        @Html.TextBoxFor(m => m.OrderSubCategory, new { @maxlength = "50", @id = "txtOrderSubCategory" })
      </div>
      <div class="rowTable">
        <label>OrderType:</label>
        @Html.TextBoxFor(m => m.OrderType, new { @maxlength = "50", @id = "txtOrderType" })
      </div>
   </div>
   <div class="col-sm-3">
      <div class="rowTable">
        <label>OrderName:</label>
        @Html.TextBoxFor(m => m.OrderName, new { @maxlength = "50", @id = "txtOrderName" })
      </div>
      <div class="rowTable">
        <label>AllergyType:</label>
        @Html.TextBoxFor(m => m.AllergyType, new { @maxlength = "5", @id = "txtAllergyType" })
      </div>
      <div class="rowTable">
        <label>ReactionType:</label>
        @Html.TextBoxFor(m => m.ReactionType, new { @maxlength = "5", @id = "txtReactionType" })
      </div>
      <div class="rowTable">
        <label>PatientId:</label>
        @Html.TextBoxFor(m => m.PatientId, new { @maxlength = "10", @id = "txtPatientId" })
      </div>
      <div class="rowTable">
        <label>EncounterId:</label>
        @Html.TextBoxFor(m => m.EncounterId, new { @maxlength = "10", @id = "txtEncounterId" })
      </div>
   </div>
   <div class="col-sm-3">
      <div class="rowTable">
        <label>ReactionOrderCode:</label>
        @Html.TextBoxFor(m => m.ReactionOrderCode, new { @maxlength = "50", @id = "txtReactionOrderCode" })
      </div>
      <div class="rowTable">
        <label>AllergyFromName:</label>
        @Html.TextBoxFor(m => m.AllergyFromName, new { @maxlength = "50", @id = "txtAllergyFromName" })
      </div>
      <div class="rowTable">
        <label>IsOrderCancel:</label>
        @Html.TextBoxFor(m => m.IsOrderCancel, new { @maxlength = "10", @id = "txtIsOrderCancel" })
      </div>
      <div class="rowTable">
        <label>OrderBy:</label>
        @Html.TextBoxFor(m => m.OrderBy, new { @maxlength = "10", @id = "txtOrderBy" })
      </div>
      <div class="rowTable">
        <label>OrderedDate:</label>
        @Html.TextBoxFor(m => m.OrderedDate,"{0:MM/dd/yyyy}", new { @maxlength = "10", @id = "dtOrderedDate" })
      </div>
   </div>
   <div class="col-sm-3">
      <div class="rowTable">
        <label>CreatedBy:</label>
        @Html.TextBoxFor(m => m.CreatedBy, new { @maxlength = "10", @id = "txtCreatedBy" })
      </div>
      <div class="rowTable">
        <label>CreatedDate:</label>
        @Html.TextBoxFor(m => m.CreatedDate,"{0:MM/dd/yyyy}", new { @maxlength = "10", @id = "dtCreatedDate" })
      </div>
    <div class="clear"></div>
    <div class="btn-group">
        <div style="float: left;">
            <input type="submit" id="btnSave" class="btn btn-primary edit-btn marginBtn" value="@btnSaveText" onclick="return SaveDrugAllergyLog();" />
            <button name="ClientCancel" id="btnCancel" class="btn btn-primary edit-btn marginBtn" type="button" onclick="return ClearDrugAllergyLogForm();">Cancel</button>
        </div>
    </div>



</div>
