@using BillingSystem.Model.CustomModel
@model List<HolidayPlannerCustomModel>

<div class="form">
    <div class="table-responsive">
        @if (Model != null && Model.Count > 0)
        {
            WebGrid grid = new WebGrid(Model, ajaxUpdateContainerId: "gridContent");
            <div id="gridContent">
                @grid.GetHtml(tableStyle: "table table-grid", headerStyle: "gridHead", footerStyle: "gridFooter", rowStyle: "gridRow", alternatingRowStyle: "gridAltRow", columns: grid.Columns(
                                grid.Column("HolidayPlannerId", header: "HolidayPlannerId" , canSort: true),
                                grid.Column("CorporateId", header: "CorporateId" , canSort: true),
                                grid.Column("FacilityId", header: "FacilityId" , canSort: true),
                                grid.Column("ItemtypeId", header: "ItemtypeId" , canSort: true),
                                grid.Column("ItemId", header: "ItemId" , canSort: true),
                                grid.Column("Year", header: "Year" , canSort: true),
                                grid.Column("Description", header: "Description" , canSort: true),
                                grid.Column("IsActive", header: "IsActive" , canSort: true),
                
                grid.Column(header: "Action", format: @<text>
                <a href="#" onclick="EditHolidayPlanner('@item.HolidayPlannerId')" style="float: left; margin-right: 7px; width: 15px;">
                    <img src="../images/edit.png" /></a>
                &nbsp;<a href="#" title="Delete" onclick="return DeleteHolidayPlanner('@item.HolidayPlannerId');" style="float: left; width: 15px;"><img src="../images/delete.png" /></a>
                </text>)
                                ))
            </div>            
        }
        else
        {

            <h2>No Record found</h2>
        }
    </div>
</div>
