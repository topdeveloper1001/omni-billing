    //    }
    //});
    $(document).ready(function () {
        $('.table_scroll').fixedHeaderTable({ cloneHeadToFoot: true, altClass: 'odd', autoShow: true });
        SetGridSorting(SortFacilityStructureGrid, "#FacilityStructureGridContent22");
    });
</script>
