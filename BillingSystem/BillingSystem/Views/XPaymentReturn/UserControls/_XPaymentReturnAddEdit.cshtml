@using BillingSystem.Model
@model XPaymentReturn

<style>
    .btn-group {
        margin-left: 15px;
        margin-bottom: 0;
    }

        .btn-group a {
            margin-top: 5px;
        }
</style>
<div class="form" id="XPaymentReturnFormDiv">
    <div class="col-md-12 clear">
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
            <div class="rowTable">
                <label>Select Patient: </label>
                <select id="ddlPatients" onchange="BindEncounters();" class="validate[required]"></select>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
            <div class="rowTable">
                <label>Select Encounter: </label>
                <select id="ddlEncounters" onchange="GetBillHeaderListByEncounterId();" class="validate[required] emptyddl"></select>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
            <div class="rowTable">
                <label>Select Bill: </label>
                <select id="ddlBillHeaders" class="validate[required] emptyddl emptyddl1" onchange="BindClaimId();"></select>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-8 col-md-4 col-lg-4">
        <div class="rowTable">
            <label>Claim ID:</label>
            <select id="ddlClaim" class="emptyddl emptyddl1 emptyddl2"></select>
        </div>
    </div>
    <div class="clear"></div>
    <div class="btn-group">
        <a class="blue-btn btn btn-primary edit-btn marginBtn" onclick="ViewClaimDetails();" id="BtnViewClaim">View Claim Detail</a>
        <a class="blue-btn btn btn-primary edit-btn marginBtn" onclick="GenerateClaim();" id="BtnGenerateClaim">Generate Claim</a>
        <a class="blue-btn btn btn-primary edit-btn marginBtn" style="display: none;" onclick="GenerateXMLFile();" id="BtnGenerateXMLFile">Generate XML File</a>
    </div>
    <div class="col-md-12">
        <div id="divClaimInfo" class="rowTable">
            @* Add the Header column here *@
        </div>
    </div>

    <div class="clear"></div>

</div>
