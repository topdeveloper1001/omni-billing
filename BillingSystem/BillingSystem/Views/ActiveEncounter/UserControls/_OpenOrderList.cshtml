@using BillingSystem.Model.CustomModel

@model List<OpenOrderCustomModel>

@if (Model != null && Model.Count > 0)
{
    var grid = new WebGrid(Model, ajaxUpdateContainerId: "gridContentOpenOrderChange", canPage: false, canSort: false);
    <div id="gridContentOpenOrderChange">
        @grid.GetHtml(htmlAttributes: new { id = "gridContentOpenOrder" }, tableStyle: "table", headerStyle: "gridHead", footerStyle: "gridFooter", rowStyle: "gridRow", alternatingRowStyle: "gridAltRow",
            columns:
                grid.Columns(
                    grid.Column("OrderCode", "Order Code", canSort: false, style: "col3"),
                    grid.Column("OrderDescription", "Order Description", canSort: false, style: "col4"),
                    grid.Column("CategoryName", "Order Category", canSort: false, style: "col6"),
                     grid.Column("SubCategoryName", "Order Sub-Category", canSort: false, style: "col7"),
                     grid.Column("Status", "Status", canSort: false, style: "col7"),
                     grid.Column("Quantity", "Quantity", canSort: false, style: "col2"),
                     grid.Column("FrequencyText", "Frequency", canSort: false, style: "col5"),
                     grid.Column("PeriodDays", "Duration", canSort: false, style: "col8"),
                     grid.Column("OrderNotes", "Comments", canSort: false, style: "col9"),
                    grid.Column(header: "Action", format: @<text>
                        <a class="editOpenOrder hideSummary" title="Cancel Order" onclick="ViewCancelOrderPopup('@item.OpenOrderID',this.id) " id="trOpenOrderId_@item.OpenOrderID" style="float: left; margin-right: 7px; width: 15px;" href="javascript:void(0);">
                                <img src="@Url.Content("~/images/delete_small.png")" />
                        </a>
                    </text>)
                                              )
                                      )
    </div>
}
else
{
    <h2>No Record found</h2>
}

<script>
    $(function () {
        SetGridSorting(BindOrdersBySort, "#gridContentOpenOrder");
    });
</script>
