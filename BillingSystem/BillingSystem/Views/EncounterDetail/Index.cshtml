@using System.Diagnostics
@model BillingSystem.Model.CustomModel.EncounterCustomModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="white-bg">
    <div class="summery-bg">
        <div class="personal-detail">
            <div class="col-sm-6 col-lg-3">
                <div class="rowTable">
                    <label>Patient Name:</label>
                    <p>@Model.PatientName</p>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="rowTable">
                    <label>Birthdate:</label>
                    <p>
                        @if (Model.PatientInfo.PersonBirthDate != null)
                        {
                            @Model.PatientInfo.PersonBirthDate.Value.ToString("dd/mm/yyyy")
                        }
                        </p>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="rowTable">
                    <label>Age:</label>
                    <p>@Model.Age</p>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="rowTable">
                    <label>Emirati ID:</label>
                    <p>@Model.PersonEmiratesIDNumber</p>
                </div>
            </div>
        </div>
        <div class="personal-detail">
            <div class="col-sm-6 col-lg-3">
                <div class="rowTable">
                    <label>Attending Physician:</label>
                    <p>@Model.EncounterPhysicianName</p>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="rowTable">
                    <label>Sex:</label>
                    <p>@Model.PatientInfo.PersonGender</p>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="rowTable">
                    <label>Medical Record Number:</label>
                    <p>@Model.PersonMedicalRecordNumber</p>
                </div>
            </div>
        </div>
    </div>
    <div class="summery-bg">
        <div class="personal-detail">
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="rowTable">
                    <label>Encounter Start Time:</label>
                    <p>@Model.EncounterStartTime</p>
                </div>
                <div class="rowTable">
                    <label>Encounter Patient Type:</label>
                    <p>@Model.EncounterPatientTypeName</p>
                </div>
                <div class="rowTable">
                    <label>Encounter Attending Physician:</label>
                    <p>@Model.EncounterPhysicianName</p>
                </div>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="rowTable">
                    <label>Encounter Admit Reason:</label>
                    <p>@Model.EncounterAdmitReason</p>
                </div>
                <div class="rowTable">
                    <label>Encounter Type:</label>
                    <p>@Model.EncounterTypeName</p>
                </div>
                <div class="rowTable">
                    <label>Encounter Service Category:</label>
                    <p>@Model.EncounterServiceCategoryName</p>
                </div>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="rowTable">
                    <label>Encounter Speciality:</label>
                    <p>@Model.EncounterSpecialityName</p>
                </div>
                <div class="rowTable">
                    <label>Encounter Admit Type:</label>
                    <p>@Model.EncounterAdmitTypeName</p>
                </div>
                <div class="rowTable">
                    <label>Mode of Arrival:</label>
                    <p>@Model.EncounterModeOfArrivalName</p>
                </div>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3">

                <div class="rowTable">
                    <label>Encounter Number:</label>
                    <span>@Model.EncounterNumber</span>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="panel panel-default collapsecss ourcollapse">
        <div href="#collapseOne" data-parent="#accordion" data-toggle="collapse" class="panel-heading">
            <h4 class="panel-title collapseTitle">
                <span class="glyphicon glyphicon-plus-sign"></span>&nbsp;Charges details
                    <a class="btn btn-default btn-sm pull-right collapse-btn">
                        <span class="glyphicon glyphicon-chevron-down"></span>
                    </a>
            </h4>
        </div>

        <div class="panel-collapse collpase2 collapse in" id="collapseOne">
            <div class="panel-body scroller">
                <div class="base-color">
                    <div class="col-lg-12">
                        <div class="table-responsive">
                            @*@{Html.RenderPartial("~/Views/PreliminaryBill/UserControls/_BedTransactionList.cshtml", Model.EncounterBedTransaction);}*@
                            @{Html.RenderPartial("~/Views/BillHeader/UserControls/_BillActivityList.cshtml", Model.EncounterBedTransaction);}
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
