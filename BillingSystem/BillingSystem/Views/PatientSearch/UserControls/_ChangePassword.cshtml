@using BillingSystem.Model

@*@model IEnumerable<PatientInfo>*@
@model Users

<script src="~/Scripts/ChangePassword/ChangePassword.js"></script>

<style>
    .btn-group {
    margin-left: 0;}
</style>

<div id="divChangepassword">
    <div class="panel panel-default collapsecss ourcollapse" style="overflow: hidden;">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion">
            <h1 class="panel-title collapseTitle">
                <span class="glyphicon glyphicon-info-sign"></span>&nbsp;Change Password
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h1>
        </div>
        <div class="summery-bg">
            @if (Model != null)
            {
                <div class="personal-detail">
                    <div class="col-sm-6 col-lg-4">
                        <div class="rowTable">
                            <label>User Name:</label>
                            <span>@Model.UserName</span>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">

                            <div class="rowTable">
                                <label>First Name:</label>
                                <span>@Model.FirstName</span>
                            </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">

                            <div class="rowTable">
                                <label>Last Name:</label>
                                <span>@Model.LastName</span>
                            </div>
                    </div>
                </div>
            }
        </div>
        <span style="color: red;" id="spErrorMsg1"></span>
        <div class="col-sm-6 col-md-4 col-lg-4">
            <div class="rowTable">
                <label class="control-label">New Password:</label>
                @Html.Password("txtNewPassword", null, new { @maxlength = "14", @class = "validate[required] passwordmatch", @id = "txtNewPassword" })
            </div>
            <div class="rowTable">
                <label class="control-label">Confirm New Password:</label>
                @Html.Password("txtConfirmPassword", null, new { @maxlength = "14", @class = "validate[required] validate[passwordmatch]", @id = "txtConfirmPassword" })
            </div>
            <div class="btn-group">
                <input type="button" id="btnChangePassword" onclick="return ChangePassword();" class="blue-btn btn btn-primary edit-btn marginBtn" value="Change Password" />
            </div>
        </div>
    </div>
</div>