@model BillingSystem.Model.ManagedCare

@{
    ViewBag.Title = "ManagedCare";
}
<style>
    select {
        margin-bottom: 10px;
    }
</style>
<div class="form" id="ManagedCareFormDiv">
    @*// BBCOLUMNSHERE*@
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        @Html.HiddenFor(m => m.ManagedCareID, new { @maxlength = "10", @id = "hdManagedCareID" })
        <div class="rowTable">
            <label>Insurance Company:</label>
            <select id="ddlManagedCareInsurance" class="validate[required]" onchange="OnChangeInsuranceCompany('#ddlManagedCareInsurance', '#ddlManagedCarePlans')"></select>
            @Html.HiddenFor(m => m.ManagedCareInsuranceID, new { id = "hdManagedCareInsuranceID" })
        </div>
        <div class="rowTable">
            <label>Managed Care Plan:</label>
            <select id="ddlManagedCarePlans" class="validate[required]" onchange="OnChangeInsurancePlan('#ddlManagedCarePlans', '#ddlManagedCarePolicy')"></select>
            @Html.HiddenFor(m => m.ManagedCarePlanID, new { id = "hdManagedCarePlanID" })
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <div class="rowTable">
            <label>Managed Care Policy:</label>
            <select id="ddlManagedCarePolicy" class="validate[required]"></select>
            @Html.HiddenFor(m => m.ManagedCarePolicyID, new { @id = "hdManagedCarePolicyID" })
        </div>
        <div class="rowTable">
            <label>Managed Care Multiplier:</label>
            @Html.TextBoxFor(m => m.ManagedCareMultiplier, new { @maxlength = "10", @id = "txtManagedCareMultiplier", @class = "validate[optional[number]]" })
        </div>

        @*<div class="rowTable">
                <label>CorporateID:</label>
                @Html.TextBoxFor(m => m.CorporateID, new { @maxlength = "10", @id = "txtCorporateID" })
            </div>
            <div class="rowTable">
                <label>FacilityID:</label>
                @Html.TextBoxFor(m => m.FacilityID, new { @maxlength = "10", @id = "txtFacilityID" })
            </div>*@
    </div>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <div class="rowTable">
            <label>Managed Care Inpatient Deduct:</label>
            @Html.TextBoxFor(m => m.ManagedCareInpatientDeduct, new { @maxlength = "10", @id = "txtManagedCareInpatientDeduct", @class = "validate[optional[number]]" })
        </div>
        <div class="rowTable">
            <label>Managed Care Outpatient Deduct:</label>
            @Html.TextBoxFor(m => m.ManagedCareOutpatientDeduct, new { @maxlength = "10", @id = "txtManagedCareOutpatientDeduct", @class = "validate[optional[number]]" })
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <div class="rowTable">
            <label>Managed Care Per Diems:</label>
            @Html.TextBoxFor(m => m.ManagedCarePerDiems, new { @maxlength = "10", @id = "txtManagedCarePerDiems", @class = "validate[optional[number]]" })
        </div>
        <div class="rowTable">
            <label>IsActive:</label>
            @Html.CheckBoxFor(m => m.IsActive, new { @maxlength = "10", @id = "chkIsActive" })
        </div>
    </div>

    <div class="clear"></div>

    <div class="btn-group">
        <div style="float: left;">
            @if (Model != null && Model.ManagedCareID != 0)
            {  <input type="submit" class="btn btn-primary edit-btn marginBtn" value="Update" onclick="return SaveManagedCare('@Model.ManagedCareID    ');" />
            }
            else
            {
                <input type="submit" onclick="return SaveManagedCare('@Model.ManagedCareID    ');" class="btn btn-primary edit-btn marginBtn" value="Save" />
                
            }
            <button name="ClientCancel" class="btn btn-primary edit-btn marginBtn" type="button" onclick="return ClearAll();">Cancel</button>
            <br />
            <span id="lblMessage" style="display: none; font-weight: bold; margin-top: 5px;">Fields marked with <span style="color: red;">* </span>are mendatory.</span>

        </div>
    </div>



</div>
