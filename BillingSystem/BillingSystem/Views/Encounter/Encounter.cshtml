@using BillingSystem.Common
@model BillingSystem.Model.CustomModel.EncounterCustomModel

@{
    ViewBag.Title = "Encounter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .btn-group {
        margin: 15px 0 10px 30px;
    }
</style>
<script src="~/js/jquery-ui.js"></script>
<div class="white-bg">
    <div class="summery-bg">
        <div class="personal-detail">
            <div class="col-sm-6 col-lg-3">
                <div class="rowTable">
                    <label>Patient Name:</label>
                    <span>@Model.PatientName</span>
                    @Html.HiddenFor(m => m.PatientID, new { @id = "hdPatientID" })
                </div>

            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="rowTable">
                    <label>Emirates ID:</label>
                    <span>@Model.PersonEmiratesIDNumber</span>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="rowTable">
                    <label>Medical Record Number:</label>
                    <span>@Model.PersonMedicalRecordNumber</span>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="rowTable">
                    <label>Encounter Facility:</label>
                    <span>@Model.FacilityName</span>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default collapsecss ourcollapse">
        <div class="panel-heading">
            @*data-toggle="collapse" data-parent="#accordion" href="#collapseThree"*@
            <h1 class="panel-title collapseTitle">
                <span class="glyphicon glyphicon-info-sign"></span>&nbsp;
                @ViewBag.Heading
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h1>
        </div>
        <div id="collapseThree" class="panel-collapse collapse in">
            <div class="panel-body">
                <div class="base-color">
                    @{Html.RenderPartial("~/Views/Encounter/UserControls/_CustomEncounter.cshtml", Model);}
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Scripts/Encounter/CustomEncounter.js?@Helpers.CurrentAssemblyTicks"></script>
