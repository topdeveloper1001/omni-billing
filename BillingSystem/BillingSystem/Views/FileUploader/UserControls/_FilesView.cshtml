@model BillingSystem.Model.DocumentsTemplates
<div class="blueBgUploadDoc">
    <div>
        <div class="col-sm-6">
            <label>File Type: &nbsp;@Model.DocumentName</label>
        </div>
        <div class="col-sm-3">
            <label>Notes: &nbsp;@Model.DocumentNotes</label>
        </div>
        <div class="col-sm-3" style="float: right;" >
            <a href="@Model.FilePath" target="_blank" download>Download File</a>
        </div>
    </div>
</div>
<br/>
@if (@Model.IsTemplate)
{
    <div class="col-sm-12">
        <iframe src="@Model.FilePath" style="min-height:480px; width: 100%">
            @*<p>No Data Found.</p>*@
        </iframe>
    </div>
}
else
{
    <div class="col-sm-12">
        <img id="pfimg" src="@Model.FilePath" class="user-img" />
    </div>
}
