@using BillingSystem.Model
@model BillingSystem.Model.ATCCodes

<style>
    .btn-group {
        margin-left: 5px;
    }

    select {
        margin-bottom: 10px;
    }
</style>
<script src="~/Scripts/ATCCodes/ATCCodesScript.js"></script>
<div class="form" id="ATCCodesFormDiv">

    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
        <div class="rowTable">
            <label><span class="mandatoryStar"></span>Code:</label>
            @Html.TextBoxFor(m => m.ATCCode, new { @maxlength = "20", @ID = "txtCode", @class = "validate[required]" })
        </div>
        <div class="rowTable">
            <label>Code Description:</label>
            @Html.TextAreaFor(m => m.CodeDescription, new { @maxlength = "200", @resize = "vertical", @ID = "txtCodeDescription" })
            @*@Html.HiddenFor(m => m.DRGCodesId, new { @ID = "hdDRGCodesId" })*@
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
        <div class="rowTable">
            <label><span class="mandatoryStar"></span>Purpose:</label>
            @Html.TextBoxFor(m => m.Purpose, new { @maxlength = "200", @resize = "vertical", @ID = "txtPurpose", @class = "validate[required]" })
        </div>
        <div class="rowTable">
            <label><span class="mandatoryStar"></span>Drug Name:</label>
            @Html.TextBoxFor(m => m.DrugName, new { @maxlength = "200", @resize = "vertical", @ID = "txtDrugName", @class = "validate[required]" })
        </div>
        @*<div class="rowTable">
                <label>Sub Code Description:</label>
                @Html.TextAreaFor(m => m.SubcodeDescription, new { @maxlength = "200", @resize = "vertical", @ID = "txtSubcodeDescription" })
            </div>*@
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
        <div class="rowTable">
            <label>Effective Date:</label>
            @Html.TextBoxFor(m => m.CodeEffectiveFrom, "{0:MM/dd/yyyy}", new { @maxlength = "10", @ID = "dtCodeEffectiveDate", @class = "dtGeneral" })
        </div>
        <div class="rowTable">
            <label>Expiry Date:</label>
            @Html.TextBoxFor(m => m.CodeEffectiveTill, "{0:MM/dd/yyyy}", new { @maxlength = "10", @ID = "dtCodeExpiryDate", @class = "dtGreaterThanCurrent", @onchange = "CheckValidDateNotLessThanTodayDate(this,'dtCodeExpiryDate')" })
        </div>

    </div>
    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
        <div class="rowTable">
            <label>Drug Description:</label>
            @Html.TextBoxFor(m => m.DrugDescription, new { @maxlength = "500", @resize = "vertical", @ID = "txtDrugDescription" })
        </div>
        <div class="rowTable">
            <label>Sub Code:</label>
            @Html.TextBoxFor(m => m.SubCode, new { @maxlength = "50", @resize = "vertical", @ID = "txtSubCode" })
        </div>
    </div>


    <div class="clear"></div>
    <div class="btn-group">
        <div style="float: left;">
            @if (Model.ATCCodeID != 0)
            {
                <input type="submit" id="btnSubmit" class="btn btn-primary edit-btn marginBtn" value="Update" onclick="return SaveATCCodes('@Model.ATCCodeID'); " />
            }
            else
            {
                <input type="submit" id="btnSubmit" onclick="return SaveATCCodes('0'); " class="btn btn-primary edit-btn marginBtn" value="Save" />
            }

            <button name="ClientCancel" class="btn btn-primary edit-btn marginBtn" type="button" onclick="return ClearAll();">Cancel</button>
        </div>
    </div>
</div>
