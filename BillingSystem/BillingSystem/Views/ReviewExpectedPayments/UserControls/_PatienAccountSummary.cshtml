@*@model IEnumerable<PatientInfo>*@
@model IEnumerable<BillingSystem.Model.CustomModel.AccountStatementCustomModel>



<div id="divSearchResult">
    <div class="table-responsive">
        @if (Model != null)
        {
            if (Model.Any())
            {
                var grid = new WebGrid(Model, ajaxUpdateContainerId: "AccountStatement", canPage: false, canSort: false);
                <div id="AccountStatement">
                    @grid.GetHtml(htmlAttributes: new {id = "gridAccountStatement"}, tableStyle: "table table-grid", headerStyle: "gridHead", footerStyle: "gridFooter",
                        rowStyle: "gridRow", alternatingRowStyle: "gridAltRow", columns: grid.Columns(
                            grid.Column("PatientName", header: "Patient Name", canSort: true, style: "col2"),
                            //grid.Column("EmirateID", header: "Emirate ID", canSort: true, style: "col3"),
                            //grid.Column("MedicalRecord", header: "Medical Record", canSort: true, style: "col4"),
                            grid.Column("Encounter", header: "Encounter", canSort: true, style: "col5"),
                            grid.Column("BillDate", header: "Bill Date", canSort: true, style: "col6", format: @<text>@item.BillDate.ToString("dd/MM/yyyy")</text>),
                            grid.Column("BillNumber", header: "Bill Number", canSort: true, style: "col7"),
                            grid.Column("GrossExpected", header: "Gross Expected", canSort: true, style: "col8"),
                            grid.Column("GrossPaid", header: "Gross Paid", canSort: true, style: "col8"),
                            grid.Column("GrossBalance", header: "Gross Balance", canSort: true, style: "col8"),
                            grid.Column("PatientExpected", header: "Patient Expected", canSort: true, style: "col8"),
                            grid.Column("PatientPaid", header: "Patient Paid", canSort: true, style: "col8"),
                            grid.Column("PatientBalance", header: "Patient Balance", canSort: true, style: "col8"),
                            grid.Column("PayerExpected", header: "Payer Expected", canSort: true, style: "col8"),
                            grid.Column("PayerPaid", header: "Payer Paid", canSort: true, style: "col8"),
                            grid.Column("MCDiscount", header: "Managed Care Discount", canSort: true, style: "col8"),
                            grid.Column("PayerBalance", header: "Payer Balance", canSort: true, style: "col8")
                            ))
                </div>
            }
            else
            {
                <h2>No Record found</h2>
            }
        }
    </div>
</div>
