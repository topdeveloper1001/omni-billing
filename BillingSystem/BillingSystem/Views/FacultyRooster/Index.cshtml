@using BillingSystem.Common
@using BillingSystem.Models

@model FacultyRoosterView

@{
    ViewBag.Title = "FacultyRooster View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .home {
        -webkit-box-shadow: 10px 10px 1px 0px;
        margin: 4px 31px 62px 41px;
        border: 6px solid #E6E6FA;
        box-shadow: 10px 10px 1px 0px;
        width: 150px;
        height: 65px;
        float: left;
        text-align: center;
        background-color: #5c7499;
    }
</style>

<div class="white-bg">
    <div class="panel panel-default ourcollapse custom_panel">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseFacultyRoosterAddEdit">
            <h4 class="panel-title collapseTitle">
                <span class="glyphicon glyphicon-plus-sign"></span>Add Faculty Timing
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseFacultyRoosterAddEdit" class="panel-collapse collapse">
            <div class="panel-body" id="divFacultyTimming">
                @{Html.RenderPartial("~/Views/FacultyRooster/UserControls/_FacultyTimming.cshtml", Model.CurrentFacultyRooster);}

            </div>
        </div>
    </div>
    <div class="panel panel-default collapsecss ourcollapse bordertable">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseFacultyRoosterList">
            <h4 class="panel-title collapseTitle">
                <span>
                    <img src="~/images/list.png" /></span> Faculty Timing List
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseFacultyRoosterList" class="panel-collapse collapse in tableImg">
            <div class="panel-body">
                <div class="base-color" id="FacultyRoosterListDiv">
                    @{Html.RenderPartial("~/Views/FacultyRooster/UserControls/_FacultyRoosterList.cshtml", Model.FacultyRoosterList);}
                </div>
            </div>
        </div>
    </div>
    <div class="clear"></div>
</div>

<script src="~/Scripts/FacultyRooster/FacultyRoosterScript.js?@Helpers.CurrentAssemblyTicks"></script>
<script src="~/Scripts/Common/confirmEvents.js?@Helpers.CurrentAssemblyTicks"></script>