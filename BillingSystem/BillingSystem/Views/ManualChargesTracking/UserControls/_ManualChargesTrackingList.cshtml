@using BillingSystem.Model.CustomModel
@model List<ManualChargesTrackingCustomModel>
@{
    var listOrderby = new List<ManualChargesTrackingCustomModel>();
    
}
<div class="form">
     @if (Model != null && Model.Count > 0)
     {
         listOrderby = Model;//Model.OrderByDescending(x => x.CreatedDate).ToList();
     }
    <div class="table-responsive">
        @if (listOrderby.Count > 0)
        {
            var grid = new WebGrid(listOrderby, ajaxUpdateContainerId: "gridContent", canPage: false);
            <div id="gridContent">
                @grid.GetHtml(htmlAttributes: new { id = "ManualChargesTrackingListGrid" }, tableStyle: "table table_scroll", headerStyle: "gridHead", footerStyle: "gridFooter", rowStyle: "gridRow", alternatingRowStyle: "gridAltRow", columns: grid.Columns(
                    grid.Column("CreatedDate", header: "Created on", canSort: true),
                    grid.Column("TrackingTypeNameValStr", header: "Tracking Type Name", canSort: true),
                    grid.Column("TrackingTypeStr", header: "Tracking Type", canSort: true),
                    grid.Column("TrackingColumnName", header: "Column Name", canSort: true),
                    grid.Column("TrackingTableName", header: "Table Name", canSort: true),
                    grid.Column("TrackingValue", header: "Value", canSort: true),
                    grid.Column("TrackingBillStatusStr", header: "Bill Status", canSort: true),
                    grid.Column("BillNumber", header: "Bill Number", canSort: true),
                    grid.Column("EncounterNumber", header: "Encounter Number", canSort: true),
                    grid.Column("PatientName", header: "Patient", canSort: true),
                    grid.Column("FacilityName", header: "Facility", canSort: true),
                    grid.Column("CorporateName", header: "Corporate", canSort: true),
                    grid.Column("UpdatedBy", header: "Created By", canSort: true)
                    ))
            </div>
        }
        else
        {
            <h2>No Record found</h2>
        }
    </div>
</div>
<script>
    $(function() {
        if ($('#ManualChargesTrackingListGrid tr').length > 0) {
            $('.table_scroll').fixedHeaderTable({ cloneHeadToFoot: true, altClass: 'odd', autoShow: true });
        }
    })
</script>