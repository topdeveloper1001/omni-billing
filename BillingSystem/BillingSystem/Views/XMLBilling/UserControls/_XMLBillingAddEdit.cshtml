
@model BillingSystem.Model.XFileHeader

@{
    ViewBag.Title = "XFileHeader";
}
<style>
    select {
    margin-bottom: 10px;}
</style>
<div class="form" id="XFileHeaderFormDiv">
    @*// BBCOLUMNSHERE*@
    <div class="col-sm-3">
        <div class="rowTable">
            <label>FileID:</label>
            @Html.TextBoxFor(m => m.FileID, new { @maxlength = "10", @id = "txtFileID" })
        </div>
        <div class="rowTable">
            <label>FileType:</label>
            @Html.TextBoxFor(m => m.FileType, new { @maxlength = "20", @id = "txtFileType" })
        </div>
        <div class="rowTable">
            <label>SenderID:</label>
            @Html.TextBoxFor(m => m.SenderID, new { @maxlength = "100", @id = "txtSenderID" })
        </div>
        <div class="rowTable">
            <label>ReceiverID:</label>
            @Html.TextBoxFor(m => m.ReceiverID, new { @maxlength = "100", @id = "txtReceiverID" })
        </div>
        <div class="rowTable">
            <label>TransactionDate:</label>
            @Html.TextBoxFor(m => m.TransactionDate,"{0:MM/dd/yyyy}", new { @maxlength = "10", @id = "dtTransactionDate" })
        </div>
    </div>
    <div class="col-sm-3">
        <div class="rowTable">
            <label>RecordCount:</label>
            @Html.TextBoxFor(m => m.RecordCount, new { @maxlength = "10", @id = "txtRecordCount" })
        </div>
        <div class="rowTable">
            <label>DispositionFlag:</label>
            @Html.TextBoxFor(m => m.DispositionFlag, new { @maxlength = "100", @id = "txtDispositionFlag" })
        </div>
        <div class="rowTable">
            <label>XFile:</label>
            @Html.TextBoxFor(m => m.XFile, new { @maxlength = "-1", @id = "txtXFile" })
        </div>
        <div class="rowTable">
            <label>Status:</label>
            @Html.TextBoxFor(m => m.Status, new { @maxlength = "20", @id = "txtStatus" })
        </div>
        <div class="rowTable">
            <label>SentDate:</label>
            @Html.TextBoxFor(m => m.SentDate,"{0:MM/dd/yyyy}", new { @maxlength = "10", @id = "dtSentDate" })
        </div>
    </div>
    <div class="col-sm-3">
        <div class="rowTable">
            <label>AcknowledgeNum:</label>
            @Html.TextBoxFor(m => m.AcknowledgeNum, new { @maxlength = "100", @id = "txtAcknowledgeNum" })
        </div>
        <div class="rowTable">
            <label>AcknowledgeDate:</label>
            @Html.TextBoxFor(m => m.AcknowledgeDate,"{0:MM/dd/yyyy}", new { @maxlength = "10", @id = "dtAcknowledgeDate" })
        </div>
        <div class="rowTable">
            <label>ModifiedBy:</label>
            @Html.TextBoxFor(m => m.ModifiedBy, new { @maxlength = "50", @id = "txtModifiedBy" })
        </div>
        <div class="rowTable">
            <label>ModifiedDate:</label>
            @Html.TextBoxFor(m => m.ModifiedDate,"{0:MM/dd/yyyy}", new { @maxlength = "10", @id = "dtModifiedDate" })
        </div>
    
        <div class="clear"></div>

        <div class="btn-group">
            <div style="float: left;">
                @if (Model.FileID != 0)
                {  <input type="submit" class="btn btn-primary edit-btn marginBtn" value="Update" onclick="return SaveXFileHeader('@Model.FileID');" />
                    <button name="ClientCancel" class="btn btn-primary edit-btn marginBtn" type="button" onclick="return ClearAll();">Cancel</button>
                }
                else
                {
                    <input type="submit" onclick="return SaveXFileHeader('@Model.FileID');" class="btn btn-primary edit-btn marginBtn" value="Save" />
                    <button name="ClientCancel" class="btn btn-primary edit-btn marginBtn" type="button" onclick="return ClearAll();">Cancel</button>
                }
                <br />
                <span id="lblMessage" style="display: none; font-weight: bold; margin-top: 5px;">Fields marked with <span style="color: red;">* </span>are mendatory.</span>
            
            </div>
        </div>



    </div>
</div>