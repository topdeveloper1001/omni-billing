@using BillingSystem.Model
@model DrugInstructionAndDosing

<style>
    .btn-group {
        margin-left: 10px;
        margin-bottom: 20px;
    }

    .clear {
        clear: both;
    }

    select {
        margin-bottom: 10px;
    }
</style>

@{
    var btnSaveText = "Save";
    if (Model.Id != null && Model.Id != 0)
    {
        btnSaveText = "Update";
    }
}
<div class="form" >
   <div class="col-sm-3">
      <div class="rowTable">
          <label><span class="mandatoryStar"></span>Greenrain Code:</label>
          @Html.HiddenFor(m => m.Id, new {  @id = "hdId" })
        @Html.TextBoxFor(m => m.GreenrainCode, new { @maxlength = "20", @id = "txtGreenrainCode", @class="validate[required]" })
      </div>
      <div class="rowTable">
        <label><span class="mandatoryStar"></span>ATC Code:</label>
        @Html.TextBoxFor(m => m.ATCCode, new { @maxlength = "50", @id = "txtATCCode" , @class="validate[required]" })
      </div>
      <div class="rowTable">
        <label><span class="mandatoryStar"></span>Package Name:</label>
        @Html.TextBoxFor(m => m.PackageName, new { @maxlength = "50", @id = "txtPackageName" , @class="validate[required]" })
      </div>
      <div class="rowTable">
        <label><span class="mandatoryStar"></span>Generic Name:</label>
        @Html.TextBoxFor(m => m.GenericName, new { @maxlength = "50", @id = "txtGenericName" , @class="validate[required]" })
      </div>
   </div>
   <div class="col-sm-9">
      <div class="rowTable">
        <label><span class="mandatoryStar"></span>Admin Instructions:</label>
        @Html.TextAreaFor(m => m.AdminInstructions, new { @maxlength = "500", @id = "txtAdminInstructions" , @class="validate[required]" })
      </div>
      <div class="rowTable">
        <label><span class="mandatoryStar"></span>Recommended Dosing:</label>
        @Html.TextAreaFor(m => m.RecommendedDosing, new { @maxlength = "500", @id = "txtRecommendedDosing" , @class="validate[required]" })
      </div>
      <div class="rowTable">
        <label>IsActive:</label>
        @Html.CheckBox("chkStatus", Model.Id == 0 || Convert.ToBoolean(Model.IsActive))
      </div>
   </div>
   <div class="col-sm-4">
    <div class="clear"></div>
    <div class="btn-group">
        <div style="float: left;">
            <input type="submit" id="btnSave" class="btn btn-primary edit-btn marginBtn" value="@btnSaveText" onclick="return SaveDrugInstructionAndDosing();" />
            <button name="ClientCancel" id="btnCancel" class="btn btn-primary edit-btn marginBtn" type="button" onclick="return ClearDrugInstructionAndDosingForm();">Cancel</button>
        </div>
    </div>
   </div>
    </div>
