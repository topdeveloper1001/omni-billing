@using BillingSystem.Common
@using BillingSystem.Models

@model DrugInstructionAndDosingView

@{
    ViewBag.Title = "DrugInstructionAndDosing View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="white-bg">
    <div class="panel panel-default collapsecss ourcollapse">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseDrugInstructionAndDosingAddEdit">
            <h4 class="panel-title collapseTitle">
                <span class="glyphicon glyphicon-plus-sign"></span>Add DrugInstructionAndDosing
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseDrugInstructionAndDosingAddEdit" class="panel-collapse collapse">
            <div class="panel-body">
                <div class="base-color">
                    <div class="form" id="DrugInstructionAndDosingFormDiv">                        
                        @{Html.RenderPartial("~/Views/DrugInstructionAndDosing/UserControls/_DrugInstructionAndDosingAddEdit.cshtml", Model.CurrentDrugInstructionAndDosing);}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default collapsecss ourcollapse bordertable">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseDrugInstructionAndDosingList">
            <h4 class="panel-title collapseTitle">
                <span><img src="../images/list.png" /></span>DrugInstructionAndDosing List
                <a class="btn btn-default btn-sm pull-right collapse-btn">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </h4>
        </div>
        <div id="collapseDrugInstructionAndDosingList" class="panel-collapse collapse in tableImg">
            <div class="panel-body">
                <div class="base-color" id="DrugInstructionAndDosingListDiv">
                    @{Html.RenderPartial("~/Views/DrugInstructionAndDosing/UserControls/_DrugInstructionAndDosingList.cshtml", Model.DrugInstructionAndDosingList);}
                </div>
            </div>
        </div>
    </div>
    <div class="clear"></div>
</div>
            
<script src="~/Scripts/DrugInstructionAndDosing/DrugInstructionAndDosing.js?@Helpers.CurrentAssemblyTicks"></script>
<script src="~/Scripts/Common/confirmEvents.js?@Helpers.CurrentAssemblyTicks"></script>
