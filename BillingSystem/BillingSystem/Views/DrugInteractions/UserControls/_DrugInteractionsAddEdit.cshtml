@model BillingSystem.Model.DrugInteractions

<style>
    .btn-group {
        margin-bottom: 20px;
        margin-left: 10px;
    }

    .clear {
        clear: both;
    }

    select {
        margin-bottom: 10px;
    }
</style>

@{
    var btnSaveText = "Save";
    if (Model != null && Model.Id != 0)
    {
        btnSaveText = "Update";
    }
}
<div class="form">
    <div class="col-sm-4">
        <div class="rowTable">
            <label><span class="mandatoryStar"></span>Greenrain Code:</label>
            @Html.HiddenFor(m => m.Id, new { @id = "hdId" })
            @Html.TextBoxFor(m => m.GreenrainCode, new { @maxlength = "20", @id = "txtGreenrainCode", @class = "validate[required]" })
        </div>
        <div class="rowTable">
            <label><span class="mandatoryStar"></span>ATC Code:</label>
            @Html.TextBoxFor(m => m.ATCCode, new { @maxlength = "20", @id = "txtATCCode", @class = "validate[required]" })
        </div>
        <div class="rowTable">
            <label><span class="mandatoryStar"></span>Package Name:</label>
            @Html.TextBoxFor(m => m.PackageName, new { @maxlength = "30", @id = "txtPackageName", @class = "validate[required]" })
        </div>
    </div>
    <div class="col-sm-4">
        <div class="rowTable">
            <label><span class="mandatoryStar"></span>Generic Name:</label>
            @Html.TextBoxFor(m => m.GenericName, new { @maxlength = "100", @id = "txtGenericName", @class = "validate[required]" })
        </div>

        <div class="rowTable">
            <label><span class="mandatoryStar"></span>Reaction Category:</label>
            <select id="ddlReactionCategory" class="validate[required]"></select>
            @Html.HiddenFor(m => m.ReactionCategory, new { @id = "hdReactionCategory" })
        </div>
        <div class="rowTable">
            <label><span class="mandatoryStar"></span>CPT Code:</label>
            @Html.TextBoxFor(m => m.OrderCode, new { @maxlength = "30", @id = "txtCPTCode", @class = "validate[required]" })
        </div>
    </div>
    <div class="col-sm-4">
        <div class="rowTable">
            <label><span class="mandatoryStar"></span>Order Type:</label>
            <select id="ddlOrderType" class="validate[required]"></select>
        </div>
        <div class="rowTable">
            <label><span class="mandatoryStar"></span>Order Name:</label>
            @Html.TextBoxFor(m => m.OrderName, new { @maxlength = "50", @id = "txtOrderName", @class = "validate[required]" })
        </div>
        <div class="rowTable">
            <label><span class="mandatoryStar"></span>Warning:</label>
            @Html.TextAreaFor(m => m.Warning, new { @maxlength = "5000", @id = "txtWarning", @class = "validate[required]" })
        </div>
        <div class="rowTable">
            <label>IsActive:</label>
            @Html.CheckBox("chkStatus", Model == null || Convert.ToBoolean(Model.IsActive))
        </div>
    </div>
    <div class="col-sm-4">
        <div class="clear"></div>
        <div class="btn-group">
            <div style="float: left;">
                <input type="submit" id="btnSave" class="btn btn-primary edit-btn marginBtn" value="@btnSaveText" onclick=" return SaveDrugInteractions(); " />
                <button name="ClientCancel" id="btnCancel" class="btn btn-primary edit-btn marginBtn" type="button" onclick=" return ClearDrugInteractionsForm(); ">Cancel</button>
            </div>
        </div>
    </div>
</div>
