@using BillingSystem.Model.CustomModel
@model List<HolidayPlannerDetailsCustomModel>

<div class="form">
    <div class="table-responsive">
        @if (Model != null && Model.Count > 0)
        {
            WebGrid grid = new WebGrid(Model, ajaxUpdateContainerId: "gridContent");
            <div id="gridContent">
                @grid.GetHtml(tableStyle: "table table-grid", headerStyle: "gridHead", footerStyle: "gridFooter", rowStyle: "gridRow", alternatingRowStyle: "gridAltRow", columns: grid.Columns(
                                grid.Column("Id", header: "Id" , canSort: true),
                                grid.Column("HolidayPlannerId", header: "HolidayPlannerId" , canSort: true),
                                grid.Column("HolidayDate", header: "HolidayDate" , canSort: true),
                                grid.Column("IsActive", header: "IsActive" , canSort: true),
                                grid.Column("CreatedBy", header: "CreatedBy" , canSort: true),
                                grid.Column("CreatedDate", header: "CreatedDate" , canSort: true),
                                grid.Column("Description", header: "Description" , canSort: true),
                                grid.Column("IsActive", header: "IsActive" , canSort: true),
                
                grid.Column(header: "Action", format: @<text>
                <a href="#" onclick="EditHolidayPlannerDetails('@item.HolidayPlannerDetailsId')" style="float: left; margin-right: 7px; width: 15px;">
                    <img src="../images/edit.png" /></a>
                &nbsp;<a href="#" title="Delete" onclick="return DeleteHolidayPlannerDetails('@item.HolidayPlannerDetailsId');" style="float: left; width: 15px;"><img src="../images/delete.png" /></a>
                </text>)
                                ));
            </div>            
        }
        else
        {

            <h2>No Record found</h2>
        }
    </div>
</div>
