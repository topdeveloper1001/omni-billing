@using BillingSystem.Model
@model ProjectTaskTargets

<style>
    .btn-group {
        margin-left: 10px;
        margin-bottom: 20px;
    }

    .clear {
        clear: both;
    }

    select {
        margin-bottom: 10px;
    }
</style>

@{
    var btnTaskTargetSaveText = "Save";
    if (Model != null && Model.Id != 0)
    {
        btnTaskTargetSaveText = "Update";
    }
}
<div class="form" id="ProjectTaskTargetsFormDiv">
    @Html.HiddenFor(m => m.Id, new { @id = "taskTargetId" })
    <div class="col-sm-3">
        <div class="rowTable">
            <label>Task Number:</label>
            @*@Html.TextBoxFor(m => m.TaskNumber, new { @maxlength = "50", @id = "txtTargetTaskNumber" })*@
            <select id="ddlTargetTaskNumbers" class="validate[required]"></select>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="rowTable">
            <label>Task Date:</label>
            @Html.TextBoxFor(m => m.TaskDate, "{0:MM/dd/yyyy}", new { @maxlength = "10", @id = "dtTargetTaskDate" })
        </div>
    </div>
    <div class="col-sm-3">
        <div class="rowTable">
            <label>Targeted Completion Value (%):</label>
            <select id="ddlPrTaskTargetedValue" class="validate[required] projectsValue"></select>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="row">
            <div class="col-sm-4">
                <div class="rowTable">
                    <label>Is Active:</label>
                    @Html.CheckBoxFor(m => m.IsActive, new { @id = "TaskTargetIsActive" })
                </div>
            </div>
            <div class="col-sm-8">
                <div class="rowTable">
                    <label class="col-lg-12">&nbsp;</label>
                    <input type="submit" id="btnSave" class="btn btn-primary edit-btn marginBtn" value="@btnTaskTargetSaveText" onclick="return SaveProjectTaskTargets();" />
                    <button name="ClientCancel" id="btnCancel" class="btn btn-primary edit-btn marginBtn" type="button" onclick="return ClearProjectTaskTargetsForm();">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
