@using BillingSystem.Model.CustomModel
@model List<ScrubEditTrackCustomModel>

<div class="form">
    <div class="table-responsive">
        @if (Model != null && Model.Count > 0)
        {
            var grid = new WebGrid(Model, ajaxUpdateContainerId: "gridContent", canPage: false,canSort:true);
            <div id="gridContent">
                @grid.GetHtml(htmlAttributes: new { id = "ScrubEditTrack" },tableStyle: "table table_scroll", headerStyle: "gridHead", footerStyle: "gridFooter", rowStyle: "gridRow", alternatingRowStyle: "gridAltRow", columns: grid.Columns(
                    grid.Column("BillNumber", header: "Bill Number", canSort: true),
                      grid.Column("CorrectionCodeText", header: "Correction Code", canSort: true),
                    grid.Column("TrackTable", header: "Track Table", canSort: true),
                    grid.Column("TrackColumn", header: "Track Column", canSort: true),
                    grid.Column("TrackKeyColumn", header: "Track Key Column", canSort: true),
                    grid.Column("TrackValueBefore", header: "Track Value Before", canSort: true),
                    grid.Column("TrackValueAfter", header: "Track Value After", canSort: true),
                    grid.Column("TrackKeyIDValue", header: "Track Key ID Value", canSort: true),
                    grid.Column("TrackSideName", header: "Track Side", canSort: true),
                    grid.Column("CreatedByName", header: "Corrected By", canSort: true),
                    grid.Column("CreatedDate", header: "Corrected On", canSort: true, format: @<text>@if (item.CreatedDate != null)
                                                                                                     {
                                                                                                         @item.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss")
                                                                                                     }</text>)
                    ))
            </div>
        }
        else
        {
            <h2>No Record found</h2>
        }
    </div>
</div>
<script>
    $(function () {
        $('.table_scroll').fixedHeaderTable({ cloneHeadToFoot: true, altClass: 'odd', autoShow: true });
        SetGridSorting(SortScrubEditTrackGrid, "#gridContent");

    });
</script>