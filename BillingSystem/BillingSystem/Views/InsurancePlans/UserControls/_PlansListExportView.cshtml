@model IEnumerable<BillingSystem.Model.CustomModel.InsurancePlanCustomModel>

<div class="form">
    <div class="table-responsive">
        @if (Model != null && Model.Any())
        {
            var grid = new WebGrid(Model, ajaxUpdateContainerId: "gridContent", canPage: false, canSort: false);
            <div id="gridContent">
                @grid.GetHtml("table table-grid", "gridHead", "gridFooter", "gridRow", "gridAltRow",
                                columns: grid.Columns(
                                     grid.Column("InsuranceCompanyName", "Company Name"),
                                          grid.Column("InsurancePlan.PlanName", "Plan Name"),
                                          grid.Column("InsurancePlan.PlanNumber", "Package ID Payer"),
                                          grid.Column("InsurancePlan.PlanBeginDate", format: (item) => string.Format("{0:dd/MM/yyyy}", item.InsurancePlan.PlanBeginDate), header: "Begin Date"),
                                          grid.Column("InsurancePlan.PlanEndDate", format: (item) => string.Format("{0:dd/MM/yyyy}", item.InsurancePlan.PlanEndDate), header: "End Date"),
                                          grid.Column("InsurancePlan.PlanDescription", "Description")
                    ))
            </div>
        }
        else
        {

            <h2>No Record found</h2>
        }
    </div>
</div>
